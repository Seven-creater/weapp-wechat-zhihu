/* 无障碍解决方案库样式 */
.solutions-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 筛选栏样式 */
.filter-bar {
  background-color: #ffffff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.filter-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  background-color: #f0f0f0;
  color: #666666;
  font-size: 28rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
  text-align: center;
}

.filter-item.active {
  background-color: #0A2463;
  color: #ffffff;
}

.filter-item:last-child {
  margin-right: 0;
}

/* 搜索栏样式 */
.search-bar {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.search-input {
  position: relative;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 20rpx 60rpx 20rpx 30rpx;
}

.search-input input {
  width: 100%;
  font-size: 28rpx;
  color: #333333;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

/* 解决方案列表样式 */
.solutions-list {
  padding: 30rpx;
}

.solution-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: transform 0.3s ease;
}

.solution-item:active {
  transform: scale(0.98);
}

.solution-image {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.solution-image image {
  width: 100%;
  height: 100%;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.status-tag.solved {
  background-color: #4CAF50;
}

.status-tag.processing {
  background-color: #FF9800;
}

.solution-content {
  padding: 30rpx;
}

.solution-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.solution-category {
  display: inline-block;
  background-color: #E3F2FD;
  color: #1976D2;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.solution-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-count {
  font-size: 24rpx;
  color: #999999;
}

/* 加载更多样式 */
.load-more, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

.load-more {
  color: #0A2463;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 无障碍优化 */
.solution-item {
  min-height: 88rpx;
}

.filter-item, .load-more {
  min-height: 88rpx;
  line-height: 88rpx;
}

.search-input input {
  min-height: 88rpx;
  line-height: 88rpx;
}