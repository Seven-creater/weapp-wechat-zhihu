/* 无障碍解决方案库样式 - 大图卡片模式 */

.solutions-container {
  background-color: var(--color-bg-page);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 筛选栏样式 */
.filter-bar {
  background-color: var(--color-bg-card);
  padding: var(--spacing-sm) 0;
  border-bottom: 1rpx solid var(--color-border);
  position: sticky;
  top: 0;
  z-index: 50;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 var(--spacing-lg);
}

.filter-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  margin-right: var(--spacing-sm);
  border-radius: 999rpx;
  background-color: var(--color-bg-page);
  color: var(--color-text-secondary);
  font-size: 28rpx;
  transition: all var(--transition-fast);
  min-width: 120rpx;
  text-align: center;
}

.filter-item.active {
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
  font-weight: bold;
}

.filter-item:last-child {
  margin-right: 0;
}

/* 搜索栏样式 */
.search-bar {
  background-color: var(--color-bg-card);
  padding: var(--spacing-sm) var(--spacing-lg);
  border-bottom: 1rpx solid var(--color-border);
}

.search-input {
  position: relative;
  background-color: var(--color-bg-page);
  border-radius: 999rpx;
  padding: 16rpx 60rpx 16rpx 30rpx;
}

.search-input input {
  width: 100%;
  font-size: 28rpx;
  color: var(--color-text-primary);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

/* 解决方案列表样式 */
.solutions-list {
  padding: var(--spacing-lg);
}

.solution-item {
  background-color: var(--color-bg-card);
  border-radius: var(--border-radius-md);
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-card);
  overflow: hidden;
  transition: transform var(--transition-normal);
}

.solution-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-card-hover);
}

.solution-image {
  position: relative;
  height: 360rpx;
  overflow: hidden;
}

.solution-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: var(--color-text-inverse);
  backdrop-filter: blur(10rpx);
}

.status-tag.solved {
  background-color: var(--color-success);
}

.status-tag.processing {
  background-color: var(--color-warning);
}

.solution-content {
  padding: var(--spacing-lg);
}

.solution-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  line-height: 1.4;
  margin-bottom: var(--spacing-sm);
}

.solution-desc {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--color-text-secondary);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: var(--spacing-md);
}

.solution-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-count {
  font-size: 26rpx;
  color: var(--color-text-disabled);
}

.collect-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background-color: var(--color-bg-page);
}

.collect-icon {
  width: 44rpx;
  height: 44rpx;
  flex-shrink: 0;
}

.collect-icon.collected {
  width: 44rpx;
  height: 44rpx;
}

.collect-count {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  font-weight: 500;
}

.collect-count.collected-text {
  color: #ffd700;
}

/* 加载更多样式 */
.load-more,
.no-more {
  text-align: center;
  padding: var(--spacing-xl);
  color: var(--color-text-secondary);
  font-size: 28rpx;
}

.load-more {
  color: var(--color-primary);
  font-weight: bold;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx var(--spacing-lg);
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.empty-text {
  font-size: 36rpx;
  color: var(--color-text-secondary);
  font-weight: bold;
}

/* 无障碍优化 */
.solution-item {
  min-height: 200rpx;
}

.filter-item,
.load-more {
  min-height: 88rpx;
  line-height: 88rpx;
}

.search-input input {
  min-height: 88rpx;
  line-height: 88rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .solution-item {
    border: 3rpx solid var(--color-primary);
  }

  .collect-info {
    border: 2rpx solid var(--color-primary);
  }
}

/* 大字体模式支持 */
@media (prefers-font-size: large) {
  .solution-title {
    font-size: 40rpx;
  }

  .solution-desc {
    font-size: 32rpx;
  }
}
