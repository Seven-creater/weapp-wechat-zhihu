page {
  background-color: #f5f5f5;
  height: 100%;
}

.mark-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #0a2463;
  color: #ffffff;
}

.back-btn {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-right {
  width: 80rpx;
}

/* 内容区 */
.content {
  flex: 1;
  padding: 20rpx 30rpx 120rpx;
}

/* 区块 */
.section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

.required {
  color: #ff4d4f;
  margin-left: 8rpx;
  font-size: 28rpx;
}

/* 位置信息 */
.location-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.reselect-btn {
  background-color: #0a2463;
  color: #ffffff;
  border-radius: 999rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
}

.detail-address-input {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 选择器 */
.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.picker .placeholder {
  color: #999;
  font-size: 28rpx;
}

.picker .selected {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.picker .arrow {
  color: #999;
  font-size: 28rpx;
}

/* 设施名称输入 */
.name-input {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}

/* 状态网格 */
.status-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  border: 3rpx solid #e5e7eb;
  transition: all 0.3s;
}

.status-item.active {
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transform: scale(1.05);
}

.status-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.status-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
}

.remove-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.remove-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  border: 2rpx dashed #c7d1e6;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 描述输入 */
.description-input {
  width: 100%;
  min-height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}

.word-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.submit-btn {
  width: 100%;
  background-color: #ffd700;
  color: #0a2463;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 999rpx;
  padding: 24rpx;
  border: none;
}

.submit-btn[disabled] {
  background-color: #e5e7eb;
  color: #999;
}

