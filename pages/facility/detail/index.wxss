/* pages/facility/detail/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  color: #fff;
  font-size: 28rpx;
}

/* 详情内容 */
.detail-content {
  padding: 30rpx;
}

/* 头部信息 */
.header-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.status-badge {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  margin-bottom: 24rpx;
}

.status-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.status-label {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

.facility-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.facility-address {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 照片展示 */
.images-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #667eea;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.facility-image {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

/* 基本信息 */
.info-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  flex-shrink: 0;
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
  word-break: break-all;
}

.info-value.description {
  line-height: 1.8;
}

/* 状态历史 */
.history-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.history-timeline {
  position: relative;
  padding-left: 60rpx;
}

.history-item {
  position: relative;
  margin-bottom: 40rpx;
}

.history-item:last-child {
  margin-bottom: 0;
}

.history-dot {
  position: absolute;
  left: -60rpx;
  top: 8rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 2rpx currentColor;
  z-index: 2;
}

.history-line {
  position: absolute;
  left: -48rpx;
  top: 32rpx;
  bottom: -40rpx;
  width: 2rpx;
  background: #e0e0e0;
  z-index: 1;
}

.history-content {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-status {
  font-size: 28rpx;
  font-weight: 600;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-notes {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 16rpx;
}

.history-images {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.history-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

/* 操作按钮 */
.actions-section {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.secondary {
  background: #fff;
  color: #667eea;
}

.action-btn.danger {
  background: #fff;
  color: #ff4d4f;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 更新状态面板 */
.update-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.panel-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.panel-content {
  position: relative;
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  animation: slideUp 0.3s;
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.panel-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.panel-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.panel-body {
  flex: 1;
  overflow-y: auto;
  padding: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

.status-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.status-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 140rpx;
  border: 3rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: #fff;
  transition: all 0.3s;
}

.status-option.active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(1.05);
}

.option-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.option-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.status-option.active .option-label {
  color: #667eea;
  font-weight: 700;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #f8f9fa;
}

.update-images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.update-image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}

.update-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.remove-image {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 48rpx;
  height: 48rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.4);
}

.add-image-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  border: 3rpx dashed #d0d0d0;
  border-radius: 16rpx;
  background: #fafafa;
}

.add-image-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.add-icon {
  font-size: 64rpx;
  color: #999;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.panel-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
  background: #fff;
}

.cancel-btn,
.submit-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

