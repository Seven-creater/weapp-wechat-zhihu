/* pages/issue-detail/issue-detail.wxss */
.issue-detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.content {
  padding: 24rpx 32rpx 40rpx;
}

.image-scroll {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding: 10rpx 20rpx 20rpx;
}

.image-scroll::-webkit-scrollbar {
  display: none;
}

.image-scroll .issue-image {
  width: 420rpx;
  height: 280rpx;
  border-radius: 16rpx;
}

.image-wrapper {
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  background: #ffffff;
  margin-bottom: 20rpx;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #ffffff;
}

.status-tag.waiting {
  background: #f6a700;
}

.status-tag.submitted {
  background: #2f80ed;
}

.info-card {
  margin-top: 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.info-text {
  display: block;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.info-subtext {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.loading-state,
.empty-state {
  padding: 80rpx 32rpx;
  text-align: center;
}

.loading-text,
.empty-text {
  font-size: 26rpx;
  color: #999999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 16rpx;
}
