.container {
  padding: 0;
  background-color: #fff;
  min-height: 100vh;
}

.user-list {
  padding: 20rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.action-btn {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  color: #666;
}

.empty-state {
  text-align: center;
  padding-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}
