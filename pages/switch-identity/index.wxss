/* pages/switch-identity/index.wxss */
.container {
  min-height: 100vh;
  background: #f9fafb;
  padding: 40rpx;
}

/* 当前身份 */
.current-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 24rpx;
}

.current-identity {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.current-identity .badge-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.identity-info {
  flex: 1;
}

.identity-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  display: block;
  margin-bottom: 8rpx;
}

.identity-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 选择身份 */
.select-section {
  margin-bottom: 40rpx;
}

.identity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.identity-item {
  background: white;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  transition: all 0.3s;
}

.identity-item:active {
  transform: scale(0.98);
}

.identity-item.selected {
  background: #ecfdf5;
  border-color: #10b981;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.15);
}

.identity-item.disabled {
  opacity: 0.6;
  background: #f9fafb;
}

.identity-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.identity-header .badge-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.identity-header .identity-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  flex: 1;
}

.cert-tag {
  font-size: 22rpx;
  color: #ef4444;
  background: #fee2e2;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.check-icon {
  font-size: 32rpx;
  color: #10b981;
  font-weight: bold;
}

.identity-item .identity-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  padding-left: 44rpx;
  margin-bottom: 16rpx;
}

/* 功能列表 */
.features-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding-left: 44rpx;
}

.feature-item {
  font-size: 22rpx;
  color: #6b7280;
  background: #f3f4f6;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  line-height: 1.5;
}

/* 补充信息 */
.profile-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

.text-input {
  width: 100%;
  height: 88rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #111827;
  box-sizing: border-box;
}

.text-input:focus {
  border-color: #10b981;
  background: white;
}

.textarea-input {
  width: 100%;
  min-height: 160rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #111827;
  box-sizing: border-box;
  line-height: 1.6;
}

.textarea-input:focus {
  border-color: #10b981;
  background: white;
}

/* 提示信息 */
.tips-box {
  display: flex;
  background: #fffbeb;
  border: 2rpx solid #fde68a;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #92400e;
  display: block;
  margin-bottom: 12rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #92400e;
  line-height: 2;
  display: block;
}

/* 保存按钮 */
.action-section {
  padding-bottom: 40rpx;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: #d1d5db;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.save-btn.active {
  background: linear-gradient(135deg, #10b981, #34d399);
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.save-btn.active:active {
  transform: scale(0.98);
}

.save-btn::after {
  border: none;
}

