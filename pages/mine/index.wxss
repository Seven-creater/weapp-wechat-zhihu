/* pages/mine/index.wxss */
.mine-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

/* Header Section */
.header-section {
  padding: 20px;
  display: flex;
  align-items: center;
}

/* 未登录提示 */
.login-prompt {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.login-prompt .avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.5);
  margin-right: 16px;
}

.login-text {
  display: flex;
  flex-direction: column;
}

.login-title {
  font-size: 20px;
  font-weight: bold;
  color: white;
  margin-bottom: 4px;
}

.login-subtitle {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

/* 头像按钮 */
.avatar-button {
  position: relative;
  width: 80px;
  height: 80px;
  margin-right: 16px;
  cursor: pointer;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 2px solid #10b981;
}

.avatar-edit-tip {
  position: absolute;
  bottom: -12px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 10px;
  color: #10b981;
  background: white;
  padding: 2px 8px;
  border-radius: 10px;
  white-space: nowrap;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 昵称和退出登录按钮同行 */
.nickname-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4px;
  height: 30px;
}

.nickname-text {
  flex: 1;
  font-size: 20px;
  font-weight: bold;
  color: #333;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 退出登录按钮 */
.logout-btn {
  height: 30px;
  line-height: 30px;
  padding: 0 12px;
  font-size: 12px;
  color: #ef4444;
  background: #fee2e2;
  border: 1px solid #fecaca;
  border-radius: 15px;
  margin-left: 10px;
  flex-shrink: 0;
}

.logout-btn::after {
  border: none;
}

.user-id {
  font-size: 12px;
  color: #999;
}

/* Stats Section */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 0 20px 20px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 12px;
  color: #999;
}

/* 诊断工具 */
.diagnosis-section {
  padding: 0 20px 20px;
}

.diagnosis-card {
  display: flex;
  align-items: center;
  padding: 16px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.diagnosis-icon {
  font-size: 32px;
  margin-right: 12px;
}

.diagnosis-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.diagnosis-title {
  font-size: 16px;
  font-weight: bold;
  color: white;
  margin-bottom: 4px;
}

.diagnosis-desc {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
}

.diagnosis-arrow {
  font-size: 24px;
  color: white;
  font-weight: bold;
}

/* Tabs Section */
.tabs-section {
  display: flex;
  justify-content: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  height: 44px;
  align-items: center;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #999;
  position: relative;
  height: 100%;
  line-height: 44px;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 2px;
  background: #ff2442;
}

/* Content Grid */
.content-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 2px;
}

.grid-item {
  width: 33.33%;
  padding: 2px;
  box-sizing: border-box;
  position: relative;
}

.post-img {
  width: 100%;
  height: 120px;
  background: #f5f5f5;
}

.post-title {
  font-size: 12px;
  color: #333;
  padding: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-likes {
  font-size: 10px;
  color: #999;
  padding: 0 4px 4px;
}

/* Empty State */
.empty-state {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60px;
}

.empty-img {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

.list-footer {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 12px 0 20px;
}

.footer-text {
  font-size: 12px;
  color: #999;
}
