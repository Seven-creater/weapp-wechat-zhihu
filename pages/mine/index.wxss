/* pages/mine/index.wxss */
.mine-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

/* Header Section */
.header-section {
  padding: 20px;
  display: flex;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 16px;
  border: 1px solid #eee;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.user-id {
  font-size: 12px;
  color: #999;
}

/* Stats Section */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 0 20px 20px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 12px;
  color: #999;
}

/* Tabs Section */
.tabs-section {
  display: flex;
  justify-content: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  height: 44px;
  align-items: center;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #999;
  position: relative;
  height: 100%;
  line-height: 44px;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 2px;
  background: #ff2442;
}

/* Content Grid */
.content-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 2px;
}

.grid-item {
  width: 33.33%;
  padding: 2px;
  box-sizing: border-box;
  position: relative;
}

.post-img {
  width: 100%;
  height: 120px;
  background: #f5f5f5;
}

.post-title {
  font-size: 12px;
  color: #333;
  padding: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-likes {
  font-size: 10px;
  color: #999;
  padding: 0 4px 4px;
}

/* Empty State */
.empty-state {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60px;
}

.empty-img {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

.list-footer {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 12px 0 20px;
}

.footer-text {
  font-size: 12px;
  color: #999;
}
