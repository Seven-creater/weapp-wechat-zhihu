/* 个人中心页面样式 - 无障碍设计 */
.mine-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部登录区 */
.header-section {
  background-color: #002fa7;
  padding: 60rpx 30rpx;
  color: #ffffff;
}

.user-info {
  display: flex;
  align-items: center;
  min-height: 140rpx;
}

.avatar-section {
  margin-right: 30rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 4rpx solid #FFD700;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #ffffff;
}

.user-status {
  display: block;
  font-size: 24rpx;
  color: #FFD700;
  opacity: 0.8;
}

.login-tip {
  display: block;
  font-size: 28rpx;
  color: #FFD700;
  opacity: 0.9;
}

.login-arrow {
  width: 40rpx;
  height: 40rpx;
}

.arrow-icon {
  width: 100%;
  height: 100%;
}

/* 功能菜单列表 */
.menu-section {
  padding: 30rpx;
}

.menu-item {
  background-color: #ffffff;
  border: none;
  border-radius: 20rpx;
  padding: 0;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 120rpx;
  transition: all 0.3s ease;
}

.menu-item-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

.menu-content {
  flex: 1;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.menu-desc {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  margin-right: 30rpx;
}

/* 底部退出按钮 */
.logout-section {
  padding: 40rpx 30rpx;
}

.logout-btn {
  background-color: transparent;
  border: 2rpx solid #ff4444;
  color: #ff4444;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 84rpx;
  transition: all 0.3s ease;
}

.logout-btn-hover {
  background-color: #ff4444;
  color: #ffffff;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}

.modal.show {
  display: block;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.modal-body {
  padding: 20rpx 30rpx 40rpx;
  text-align: center;
}

.modal-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.modal-footer {
  padding: 0 30rpx 30rpx;
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666666;
}

.confirm-btn {
  background-color: #002fa7;
  color: #ffffff;
}

/* 无障碍优化 */
.menu-item, .logout-btn, .modal-btn {
  min-height: 88rpx;
  line-height: 88rpx;
}

.user-info {
  min-height: 140rpx;
}

/* 高对比度优化 */
.menu-text {
  font-weight: bold;
  font-size: 34rpx;
}

.user-name {
  font-size: 42rpx;
}

/* 大触摸目标 */
button {
  min-height: 88rpx;
  min-width: 88rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .menu-text {
    font-size: 30rpx;
  }
  
  .user-name {
    font-size: 38rpx;
  }
}