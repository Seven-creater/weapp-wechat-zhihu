page {
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

.page-container {
  padding: 30rpx;
}

/* 1. 顶部卡片 */
.profile-card {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background-color: #eee;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 24rpx;
  color: #999;
}

/* 2. 数据栏 */
.stats-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.num {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.label {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 3. 菜单卡片 */
.menu-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

.menu-title {
  font-size: 28rpx;
  font-weight: bold;
  margin: 30rpx 0;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.emoji {
  margin-right: 20rpx;
  font-size: 32rpx;
}

.arrow {
  color: #ccc;
  font-size: 30rpx;
}
