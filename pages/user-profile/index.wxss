.container {
  padding: 0;
  background-color: #fff;
  min-height: 100vh;
}

.profile-header {
  padding: 40rpx 30rpx;
  background-color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background-color: #eee;
}

.info-content {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

/* üÜï Ë∫´‰ªΩÂæΩÁ´† */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 2rpx solid;
}

.badge-icon {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.badge-text {
  font-size: 22rpx;
  font-weight: 600;
}

.bio {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

/* üîß ÊîøÂ∫úËÆ§ËØÅ‰ø°ÊÅØ */
.gov-cert-info {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.cert-item {
  display: flex;
  align-items: center;
  background: #FEF2F2;
  border: 1rpx solid #FEE2E2;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.cert-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.cert-text {
  color: #991B1B;
  font-weight: 500;
}

/* üÜï ÊâÄÂ±ûÁªÑÁªá */
.organization {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-bottom: 8rpx;
}

/* üÜï ‰ø°Ë™âËØÑÂàÜ */
.reputation {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.rating {
  font-size: 26rpx;
  color: #F59E0B;
  margin-right: 8rpx;
}

.review-count {
  font-size: 24rpx;
  color: #6B7280;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.action-row {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

.follow-btn {
  background-color: #ff2442;
  color: #fff;
}

.follow-btn.followed {
  background-color: #f5f5f5;
  color: #999;
  border: 1rpx solid #ddd;
}

.follow-btn.mutual {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
}

.chat-btn {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
}

.tabs {
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
}

.indicator {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 4rpx;
  background-color: #ff2442;
  border-radius: 2rpx;
}

.content-list {
  padding: 10rpx;
}

.post-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.post-item {
  width: 49%;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.post-cover {
  width: 100%;
  height: 340rpx;
  background-color: #f5f5f5;
}

.post-title {
  font-size: 28rpx;
  color: #333;
  padding: 16rpx 16rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.post-footer {
  padding: 16rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.like-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.icon {
  margin-right: 6rpx;
}

.empty-state {
  text-align: center;
  padding-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}
