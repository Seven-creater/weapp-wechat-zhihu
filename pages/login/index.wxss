/* pages/login/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

/* 标题 */
.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #111827;
  text-align: center;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
  text-align: center;
  margin-bottom: 60rpx;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.label {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 24rpx;
  align-self: flex-start;
}

.required {
  color: #ef4444;
  font-size: 32rpx;
}

.avatar-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  background: none;
  padding: 0;
  border: 4rpx solid #10b981;
  margin-bottom: 16rpx;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-wrapper:active .avatar-mask {
  opacity: 1;
}

.avatar-text {
  font-size: 24rpx;
  color: white;
}

.hint {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: left;
  align-self: flex-start;
}

/* 昵称区域 */
.nickname-section {
  margin-bottom: 40rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #111827;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #10b981;
  background: white;
}

/* 手机号区域 */
.phone-section {
  margin-bottom: 60rpx;
}

.phone-input {
  width: 100%;
  height: 88rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #111827;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.phone-input:focus {
  border-color: #10b981;
  background: white;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: #d1d5db;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  margin-bottom: 24rpx;
}

.submit-btn.active {
  background: linear-gradient(135deg, #10b981, #34d399);
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.submit-btn.active:active {
  transform: scale(0.98);
}

.submit-btn::after {
  border: none;
}

/* 跳过按钮 */
.skip-btn {
  text-align: center;
  padding: 20rpx;
}

.skip-btn text {
  font-size: 28rpx;
  color: #6b7280;
}

.skip-btn.disabled text {
  color: #d1d5db;
  text-decoration: none;
}

/* 说明 */
.tips {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 40rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 2;
  display: block;
}
