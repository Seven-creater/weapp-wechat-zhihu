.identity-section {
  margin-bottom: 40rpx;
}

.section-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  display: block;
  margin-bottom: 24rpx;
}

.identity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.identity-item {
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  transition: all 0.3s;
  cursor: pointer;
}

.identity-item:active {
  transform: scale(0.98);
}

.identity-item.selected {
  background: #ecfdf5;
  border-color: #10b981;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.15);
}

.identity-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.badge-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.identity-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  flex: 1;
}

.check-icon {
  font-size: 32rpx;
  color: #10b981;
  font-weight: bold;
}

.identity-desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  padding-left: 44rpx;
}

/* å¤´åƒåŒºåŸŸ */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.label {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 24rpx;
  align-self: flex-start;
}

.required {
  color: #ef4444;
  font-size: 32rpx;
}

.avatar-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  background: none;
  padding: 0;
  border: 4rpx solid #10b981;
  margin-bottom: 16rpx;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-wrapper:active .avatar-mask {
  opacity: 1;
}

.avatar-text {
  font-size: 24rpx;
  color: white;
}

.hint {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: left;
  align-self: flex-start;
}

