.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

