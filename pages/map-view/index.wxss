/* 地图页面样式 - 无障碍设计规范 */

.map-container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.map-view {
  width: 100%;
  height: 100%;
}

/* 地图控制按钮 */
.map-controls {
  position: absolute;
  right: 30rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 100;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
  min-height: 80rpx;
  min-width: 80rpx;
}

.control-btn:active {
  transform: scale(0.95);
  background-color: #f0f0f0;
}

.control-icon {
  font-size: 40rpx;
}

/* 路障统计卡片 */
.stats-card {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  background-color: rgba(0, 47, 167, 0.9);
  color: #ffffff;
  padding: 20rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
}

.stats-text {
  color: #ffffff;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  z-index: 10;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.empty-hint {
  font-size: 24rpx;
  color: #999999;
}

/* 无障碍优化 */
.control-btn {
  min-height: 80rpx;
  min-width: 80rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .stats-card {
    border: 3rpx solid #FFD700;
  }
  
  .control-btn {
    border: 3rpx solid #002fa7;
  }
}

/* 大字体模式支持 */
@media (prefers-font-size: large) {
  .stats-card {
    font-size: 32rpx;
    padding: 25rpx 35rpx;
  }
  
  .control-icon {
    font-size: 48rpx;
  }
  
  .empty-text {
    font-size: 36rpx;
  }
  
  .empty-hint {
    font-size: 28rpx;
  }
}
