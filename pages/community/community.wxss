/* pages/community/community.wxss */
.community-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #fafbfc 0%, #f0f2f5 100%);
}

/* Top Tabs */
.top-tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50px;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.tab-item {
  font-size: 16px;
  color: #999;
  margin: 0 20px;
  position: relative;
  padding: 10px 0;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #1a1a1a;
  font-weight: 600;
  font-size: 18px;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 24px;
  height: 4px;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 2px;
}

/* Waterfall Layout */
.content-scroll {
  flex: 1;
  padding: 12px 8px;
}

.waterfall {
  display: flex;
  justify-content: space-between;
  gap: 8px;
}

.waterfall-column {
  width: calc(50% - 4px);
  display: flex;
  flex-direction: column;
}

/* Post Card */
.post-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  margin-bottom: 8px;
  transition: all 0.3s ease;
}

.post-card:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

.post-image-wrapper {
  width: 100%;
  height: 240px;
  overflow: hidden;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  position: relative;
}

.post-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.post-info {
  padding: 12px;
}

.post-tag {
  display: inline-flex;
  align-self: flex-start;
  padding: 4px 10px;
  border-radius: 12px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 11px;
  font-weight: 500;
  margin-bottom: 8px;
  box-shadow: 0 2px 6px rgba(102, 126, 234, 0.3);
}

.post-title {
  font-size: 15px;
  color: #1a1a1a;
  line-height: 1.5;
  margin-bottom: 12px;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
}

.post-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 8px;
  border-top: 1px solid #f0f0f0;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.user-avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  margin-right: 6px;
  border: 2px solid #f5f5f5;
  flex-shrink: 0;
}

.like-info {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 4px 8px;
  background: #fff5f5;
  border-radius: 12px;
  flex-shrink: 0;
}

.like-icon {
  width: 16px;
  height: 16px;
}

.like-count {
  font-size: 12px;
  color: #ff4757;
  font-weight: 500;
}

.empty,
.loading {
  padding: 18px 0;
  text-align: center;
  color: #999;
  font-size: 14px;
}
