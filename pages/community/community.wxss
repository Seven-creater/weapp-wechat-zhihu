/* 社区页面样式 - 无障碍设计规范 */

.community-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #002fa7;
  color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFD700;
}

.header-right {
  display: flex;
  gap: 30rpx;
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  transition: background-color 0.3s;
}

.icon-btn:active {
  background-color: rgba(255, 255, 255, 0.4);
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

/* 帖子列表 */
.post-list {
  padding: 20rpx;
}

.post-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 47, 167, 0.1);
  transition: transform 0.2s;
}

.post-item:active {
  transform: scale(0.98);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #FFD700;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #002fa7;
  display: block;
  margin-bottom: 10rpx;
}

.post-time {
  font-size: 28rpx;
  color: #999999;
}

.post-type {
  margin-left: 20rpx;
}

.type-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.type-help {
  background-color: #FF4444;
}

.type-share {
  background-color: #4CAF50;
}

.type-issue {
  background-color: #FF9800;
}

.delete-btn {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  background: #ff4d4f;
  color: #ffffff;
  font-size: 22rpx;
  margin-left: 16rpx;
}

.content-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333333;
  word-break: break-word;
}

/* 图片展示 */
.post-images {
  margin-bottom: 30rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

/* 底部操作栏 */
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 2rpx solid #e0e0e0;
  padding-top: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  background-color: #f8f8f8;
  transition: background-color 0.3s;
  min-width: 120rpx;
  justify-content: center;
}

.action-btn:active {
  background-color: #e0e0e0;
}

.action-btn.liked {
  background-color: #FFEBEE;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.action-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: bold;
}

.like-btn.liked .action-text {
  color: #FF4444;
}

.view-stats {
  flex: 1;
  text-align: right;
}

.view-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #666666;
}

.no-more-text {
  font-size: 32rpx;
  color: #999999;
}

/* 悬浮发布按钮 */
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #FFD700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(255, 215, 0, 0.4);
  z-index: 1000;
  transition: transform 0.3s;
}

.fab-button:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 60rpx;
  color: #002fa7;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 36rpx;
  color: #666666;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999999;
}

/* 无障碍优化 */
.post-item {
  min-height: 200rpx;
}

.action-btn {
  min-height: 80rpx;
  min-width: 120rpx;
}

.fab-button {
  min-height: 120rpx;
  min-width: 120rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .post-item {
    border: 3rpx solid #002fa7;
  }
  
  .action-btn {
    border: 2rpx solid #002fa7;
  }
}

/* 大字体模式支持 */
@media (prefers-font-size: large) {
  .content-text {
    font-size: 36rpx;
    line-height: 1.8;
  }
  
  .user-name {
    font-size: 40rpx;
  }
  
  .action-text {
    font-size: 32rpx;
  }
}