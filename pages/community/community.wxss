/* 社区页面样式 - 大卡片流设计 */

.community-container {
  min-height: 100vh;
  background-color: var(--color-bg-page);
  padding-bottom: 160rpx;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-lg);
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.title {
  font-size: var(--font-size-xl);
  font-weight: bold;
  color: var(--color-accent);
}

.header-right {
  display: flex;
  gap: var(--spacing-sm);
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  transition: background-color var(--transition-fast);
}

.icon-btn:active {
  background-color: rgba(255, 255, 255, 0.4);
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

/* 帖子列表 */
.post-list {
  padding: var(--spacing-lg);
}

.post-item {
  background-color: var(--color-bg-card);
  border-radius: var(--border-radius-md);
  margin-bottom: 30rpx;
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-card);
  transition: all var(--transition-normal);
}

.post-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-card-hover);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: var(--spacing-sm);
  border: 3rpx solid var(--color-accent);
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name {
  font-size: var(--font-size-base);
  font-weight: bold;
  color: var(--color-text-primary);
  display: block;
  margin-bottom: 6rpx;
}

.post-time {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

.post-type {
  margin-left: var(--spacing-sm);
}

.type-tag {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: var(--font-size-xs);
  font-weight: bold;
  color: var(--color-text-inverse);
}

.type-help {
  background-color: var(--color-error);
}

.type-share {
  background-color: var(--color-success);
}

.type-issue {
  background-color: var(--color-warning);
}

/* 帖子内容 */
.post-content {
  margin-bottom: var(--spacing-md);
}

.content-text {
  font-size: var(--font-size-base);
  line-height: 1.6;
  color: var(--color-text-primary);
  word-break: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 标签区域 */
.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-md);
}

.tag-item {
  padding: 8rpx 20rpx;
  background-color: rgba(0, 47, 167, 0.08);
  border-radius: 999rpx;
}

.tag-text {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
  font-weight: 500;
}

/* 定位信息 */
.post-location {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-md);
  padding: 16rpx 20rpx;
  background-color: rgba(0, 47, 167, 0.05);
  border-radius: var(--border-radius-sm);
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.location-text {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 图片展示 */
.post-images {
  margin-bottom: var(--spacing-md);
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-xs);
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: var(--border-radius-sm);
  object-fit: cover;
}

/* 底部操作栏 */
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 2rpx solid var(--color-border);
  padding-top: var(--spacing-md);
}

.action-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  background-color: var(--color-bg-page);
  transition: background-color var(--transition-fast);
  min-width: 140rpx;
  justify-content: center;
}

.action-btn:active {
  background-color: var(--color-border);
}

.action-btn.liked {
  background-color: rgba(230, 67, 64, 0.1);
}

.action-btn.collected {
  background-color: rgba(255, 215, 0, 0.15);
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
}

.action-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  font-weight: 500;
}

.like-btn.liked .action-text {
  color: var(--color-error);
}

.collect-btn.collected .action-text {
  color: var(--color-accent);
}

.view-stats {
  flex: 1;
  text-align: right;
}

.view-text {
  font-size: var(--font-size-xs);
  color: var(--color-text-disabled);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: var(--spacing-xl);
}

.loading-text {
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
}

.no-more-text {
  font-size: var(--font-size-base);
  color: var(--color-text-disabled);
}

/* 悬浮发布按钮 */
.fab-button {
  position: fixed;
  right: var(--spacing-lg);
  bottom: 160rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: var(--color-accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 215, 0, 0.4);
  z-index: 1000;
  transition: transform var(--transition-normal);
}

.fab-button:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 60rpx;
  color: var(--color-primary);
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx var(--spacing-lg);
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.empty-text {
  font-size: var(--font-size-lg);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
  font-weight: bold;
}

.empty-subtext {
  font-size: var(--font-size-sm);
  color: var(--color-text-disabled);
}

/* 无障碍优化 */
.post-item {
  min-height: 200rpx;
}

.action-btn {
  min-height: 88rpx;
  min-width: 140rpx;
}

.fab-button {
  min-height: 120rpx;
  min-width: 120rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .post-item {
    border: 3rpx solid var(--color-primary);
  }

  .action-btn {
    border: 2rpx solid var(--color-primary);
  }
}

/* 大字体模式支持 */
@media (prefers-font-size: large) {
  .content-text {
    font-size: var(--font-size-lg);
    line-height: 1.8;
  }

  .user-name {
    font-size: var(--font-size-lg);
  }

  .action-text {
    font-size: var(--font-size-base);
  }
}
