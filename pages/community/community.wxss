/* 社区页面样式 - Flex布局修复版 */

.community-container {
  min-height: 100vh;
  background-color: var(--color-bg-page);
  padding-bottom: 160rpx;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-lg);
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.title {
  font-size: var(--font-size-xl);
  font-weight: bold;
  color: var(--color-accent);
}

.header-right {
  display: flex;
  gap: var(--spacing-sm);
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  transition: background-color var(--transition-fast);
}

.icon-btn:active {
  background-color: rgba(255, 255, 255, 0.4);
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

/* 帖子列表 */
.post-list {
  padding: var(--spacing-lg);
}

/* 卡片容器 */
.post-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all var(--transition-normal);
}

.post-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 头部 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #eee;
  flex-shrink: 0;
}

.info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name-row {
  display: flex;
  align-items: center;
}

.nickname {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

/* 标签样式修复 - 放在名字旁边 */
.tag {
  font-size: 20rpx;
  color: #fff;
  background-color: #ff9800;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag-help {
  background-color: var(--color-error);
}

.tag-share {
  background-color: var(--color-success);
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  display: block;
}

/* 内容区 */
.card-content {
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 标签区域 */
.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-bottom: 20rpx;
}

.tag-item {
  padding: 8rpx 20rpx;
  background-color: rgba(0, 47, 167, 0.08);
  border-radius: 999rpx;
}

.tag-text {
  font-size: 24rpx;
  color: var(--color-primary);
  font-weight: 500;
}

/* 定位信息 */
.post-location {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background-color: rgba(0, 47, 167, 0.05);
  border-radius: var(--border-radius-sm);
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.location-text {
  font-size: 26rpx;
  color: var(--color-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 图片区域 */
.post-images {
  margin-bottom: 20rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-xs);
}

.content-img {
  width: 100%;
  height: 200rpx;
  border-radius: var(--border-radius-sm);
  object-fit: cover;
}

/* 底部操作栏 - 强制对齐 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 60rpx;
  background: transparent;
  transition: background-color var(--transition-fast);
}

.action-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.action-btn .icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.action-btn .num {
  font-size: 26rpx;
  color: #666;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: var(--spacing-xl);
}

.loading-text {
  font-size: 32rpx;
  color: var(--color-text-secondary);
}

.no-more-text {
  font-size: 32rpx;
  color: var(--color-text-disabled);
}

/* 悬浮发布按钮 */
.fab-button {
  position: fixed;
  right: var(--spacing-lg);
  bottom: 160rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: var(--color-accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 215, 0, 0.4);
  z-index: 1000;
  transition: transform var(--transition-normal);
}

.fab-button:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 60rpx;
  color: var(--color-primary);
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx var(--spacing-lg);
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.empty-text {
  font-size: 36rpx;
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
  font-weight: bold;
}

.empty-subtext {
  font-size: 28rpx;
  color: var(--color-text-disabled);
}

/* 无障碍优化 */
.post-card {
  min-height: 200rpx;
}

.action-btn {
  min-height: 60rpx;
  min-width: 88rpx;
}

.fab-button {
  min-height: 120rpx;
  min-width: 120rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .post-card {
    border: 3rpx solid var(--color-primary);
  }

  .action-btn {
    border: 2rpx solid var(--color-primary);
  }
}

/* 大字体模式支持 */
@media (prefers-font-size: large) {
  .content-text {
    font-size: 36rpx;
    line-height: 1.8;
  }

  .nickname {
    font-size: 36rpx;
  }

  .action-btn .num {
    font-size: 28rpx;
  }
}
