/* pages/route/navigate/index.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #000;
}

/* 地图 */
.map-view {
  flex: 1;
  width: 100%;
}

/* 顶部信息栏 */
.top-info {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 10;
}

.info-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.info-card.warning {
  background: rgba(254, 243, 199, 0.98);
  border: 2rpx solid #f59e0b;
}

.info-main {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.distance-large {
  font-size: 72rpx;
  font-weight: 700;
  color: #667eea;
  line-height: 1;
}

.direction-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

.info-sub {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.next-waypoint {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.total-distance {
  font-size: 24rpx;
  color: #999;
}

/* 偏离提示 */
.off-route-alert {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: rgba(239, 68, 68, 0.95);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.4);
}

.alert-icon {
  font-size: 32rpx;
}

.alert-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

/* 右侧控制按钮 */
.side-controls {
  position: absolute;
  right: 20rpx;
  bottom: 200rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.control-btn {
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.control-icon {
  font-size: 40rpx;
}

/* 底部控制栏 */
.bottom-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  z-index: 10;
}

.nav-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.nav-btn.start {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #fff;
}

.nav-btn.stop {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: #fff;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 到达提示 */
.arrival-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.arrival-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 80rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  animation: slideUp 0.5s;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.arrival-icon {
  font-size: 120rpx;
  line-height: 1;
}

.arrival-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.arrival-text {
  font-size: 28rpx;
  color: #666;
}

