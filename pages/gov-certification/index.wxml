<!-- pages/gov-certification/index.wxml -->
<view class="cert-container">
  <!-- 顶部说明 -->
  <view class="header-section">
    <view class="header-icon">🏛️</view>
    <text class="header-title">政府用户认证申请</text>
    <text class="header-desc">请填写真实的政府部门工作信息，我们将进行审核</text>
  </view>

  <!-- 表单区域 -->
  <view class="form-section">
    <!-- 个人简介 -->
    <view class="form-group">
      <view class="form-label">
        <text class="label-text">个人简介</text>
        <text class="label-optional">选填</text>
      </view>
      <textarea 
        class="form-textarea"
        placeholder="简单介绍一下自己..."
        value="{{bio}}"
        bindinput="onBioInput"
        maxlength="200"
      />
      <text class="char-count">{{bio.length}}/200</text>
    </view>

    <!-- 认证信息 -->
    <view class="cert-info-section">
      <view class="section-title">
        <text class="title-icon">🔐</text>
        <text class="title-text">认证信息</text>
      </view>

      <!-- 所属部门 -->
      <view class="form-group">
        <view class="form-label">
          <text class="label-text">所属部门</text>
          <text class="label-required">*必填</text>
        </view>
        <input 
          class="form-input"
          placeholder="如：XX街道办事处"
          value="{{department}}"
          bindinput="onDepartmentInput"
          maxlength="50"
        />
      </view>

      <!-- 职位 -->
      <view class="form-group">
        <view class="form-label">
          <text class="label-text">职位</text>
          <text class="label-required">*必填</text>
        </view>
        <input 
          class="form-input"
          placeholder="如：无障碍专员"
          value="{{position}}"
          bindinput="onPositionInput"
          maxlength="50"
        />
      </view>

      <!-- 工作证号 -->
      <view class="form-group">
        <view class="form-label">
          <text class="label-text">工作证号</text>
          <text class="label-required">*必填</text>
        </view>
        <input 
          class="form-input"
          placeholder="用于身份认证"
          value="{{workId}}"
          bindinput="onWorkIdInput"
          maxlength="50"
        />
      </view>
    </view>

    <!-- 温馨提示 -->
    <view class="tips-section">
      <view class="tips-title">📋 温馨提示</view>
      <view class="tips-list">
        <text class="tips-item">• 请确保填写的信息真实有效</text>
        <text class="tips-item">• 管理员将在1-3个工作日内完成审核</text>
        <text class="tips-item">• 审核通过后将自动升级为政府用户</text>
        <text class="tips-item">• 如有疑问，请联系管理员</text>
      </view>
    </view>

    <!-- 提交按钮 -->
    <button 
      class="submit-btn {{canSubmit ? 'active' : ''}}"
      bindtap="submitApplication"
      disabled="{{!canSubmit}}"
    >
      提交认证申请
    </button>
  </view>
</view>

