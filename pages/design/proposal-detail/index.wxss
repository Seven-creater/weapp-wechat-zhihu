/* pages/design/proposal-detail/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f7fa 100%);
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.designer-card {
  background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.designer-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: #fff;
}

.designer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.designer-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

.designer-badge {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  align-self: flex-start;
}

.badge-icon {
  font-size: 20rpx;
}

.badge-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 600;
}

.time-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.time-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.time-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.section-content {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.proposal-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-word;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.design-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.budget-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 16rpx;
}

.budget-amount {
  font-size: 48rpx;
  font-weight: 700;
  color: #b45309;
  margin-bottom: 12rpx;
}

.budget-note {
  font-size: 24rpx;
  color: #92400e;
  text-align: center;
}

.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.contact-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.contact-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 32rpx;
}

.loading-state {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f7fa;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}


