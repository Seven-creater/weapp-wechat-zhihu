/* pages/design/proposal-list/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f7fa 100%);
  padding: 30rpx;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  display: block;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

.proposals-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.proposal-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.proposal-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.designer-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.designer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.designer-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.designer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.submit-time {
  font-size: 24rpx;
  color: #999;
}

.designer-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-radius: 12rpx;
}

.badge-icon {
  font-size: 20rpx;
}

.badge-text {
  font-size: 22rpx;
  color: #1e40af;
  font-weight: 600;
}

.proposal-preview {
  margin-bottom: 20rpx;
}

.proposal-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.proposal-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.budget-info {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #fef3c7;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.budget-label {
  font-size: 26rpx;
  color: #92400e;
  margin-right: 8rpx;
}

.budget-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #b45309;
}

.view-detail {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 2rpx solid #f0f0f0;
}

.detail-text {
  font-size: 26rpx;
  color: #3b82f6;
  margin-right: 8rpx;
}

.detail-arrow {
  font-size: 32rpx;
  color: #3b82f6;
  font-weight: 300;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 600;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

.loading-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}


