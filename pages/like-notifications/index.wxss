.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.notification-list {
  padding: 20rpx 24rpx;
}

.notification-item {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.notification-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.notification-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-right: 10rpx;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.action-text {
  font-size: 26rpx;
  color: #999;
}

.post-preview {
  display: flex;
  align-items: center;
  background: #fafafa;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.post-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  margin-right: 16rpx;
}

.post-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.post-title {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.post-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

