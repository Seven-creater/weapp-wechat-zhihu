/* pages/construction/construction.wxss */
page {
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

.construction-container {
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  width: 60rpx;
}

.section {
  background-color: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
}

.value {
  color: #333;
  font-weight: 500;
}

.price {
  color: #ff4d4f;
  font-weight: bold;
}

.team-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.team-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.team-card.active {
  border-color: #0a2463;
  background-color: #f0f5ff;
}

.team-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.team-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.team-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.team-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.team-rating {
  font-size: 24rpx;
  color: #ffc107;
}

.team-tags {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.team-cases {
  font-size: 22rpx;
  color: #999;
}

.progress-timeline {
  padding-left: 20rpx;
  border-left: 2rpx solid #eee;
  margin-left: 10rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 30rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -26rpx;
  top: 10rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.timeline-item.done .timeline-dot {
  background-color: #07c160;
}

.timeline-content {
  display: flex;
  flex-direction: column;
}

.timeline-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.timeline-item.done .timeline-title {
  font-weight: bold;
}

.timeline-date {
  font-size: 22rpx;
  color: #999;
}

.action-area {
  padding: 30rpx;
}

.submit-btn {
  background-color: #0a2463;
  color: #fff;
  font-weight: bold;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.contact-btn {
  background-color: #fff;
  color: #0a2463;
  font-weight: bold;
  border: 2rpx solid #0a2463;
  border-radius: 44rpx;
  font-size: 32rpx;
}
