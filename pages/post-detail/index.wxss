/* 帖子详情页样式 - 修复版 */

.post-detail-container {
  min-height: 100vh;
  background-color: var(--color-bg-page);
  padding-bottom: 160rpx;
}

/* 帖子内容区域 */
.post-content-section {
  background-color: #ffffff;
  border-radius: 0 0 30rpx 30rpx;
  padding: 40rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid var(--color-accent);
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name-row {
  display: flex;
  align-items: center;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-primary);
  margin-right: 16rpx;
}

.post-type {
  margin-left: 16rpx;
}

.type-tag {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1.4;
}

.type-help {
  background-color: var(--color-error);
}

.type-share {
  background-color: var(--color-success);
}

.type-issue {
  background-color: #ff9800;
}

.time-row {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.post-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.delete-btn {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: transparent;
  margin-left: 20rpx;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 30rpx;
}

.content-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-word;
}

/* 定位信息卡片 */
.location-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  background-color: rgba(0, 47, 167, 0.05);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.location-icon {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}

.location-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.location-label {
  font-size: 24rpx;
  color: var(--color-primary);
  font-weight: bold;
}

.location-text {
  font-size: 28rpx;
  color: var(--color-text-primary);
  line-height: 1.4;
  word-break: break-word;
}

/* 图片展示 */
.post-images {
  margin-bottom: 30rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

/* 底部操作栏 */
.post-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 30rpx;
  border-top: 2rpx solid var(--color-border);
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  background-color: transparent;
  transition: background-color var(--transition-fast);
  min-width: 140rpx;
  justify-content: center;
}

.action-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.action-btn.liked {
  background-color: rgba(230, 67, 64, 0.08);
}

.action-btn.collected {
  background-color: rgba(255, 215, 0, 0.12);
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.action-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
  font-weight: 500;
}

.like-btn.liked .action-text {
  color: var(--color-error);
}

.collect-btn.collected .action-text {
  color: var(--color-accent);
}

/* 评论区 */
.comments-section {
  background-color: #ffffff;
  border-radius: 30rpx 30rpx;
  padding: 40rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--color-border);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.comment-count {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* 评论列表 */
.comments-list {
  margin-bottom: 40rpx;
}

.comment-item {
  margin-bottom: 40rpx;
}

/* 主评论 */
.main-comment {
  display: flex;
  margin-bottom: 20rpx;
}

.comment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid var(--color-accent);
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-author {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.comment-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.comment-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  word-break: break-word;
  margin-bottom: 15rpx;
}

.comment-actions {
  display: flex;
  gap: 20rpx;
}

.comment-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background-color: var(--color-bg-page);
  transition: background-color var(--transition-fast);
}

.comment-action:active {
  background-color: var(--color-border);
}

.comment-action.liked {
  background-color: rgba(230, 67, 64, 0.08);
}

.comment-action .action-icon {
  width: 24rpx;
  height: 24rpx;
}

.comment-action .action-text {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.like-action.liked .action-text {
  color: var(--color-error);
}

.reply-action.delete-action,
.comment-action.delete-action {
  background-color: rgba(255, 77, 77, 0.08);
}

.reply-action.delete-action .action-text,
.comment-action.delete-action .action-text {
  color: var(--color-error);
}

/* 回复列表 */
.replies-list {
  margin-left: 100rpx;
  border-left: 4rpx solid var(--color-border);
  padding-left: 20rpx;
}

.reply-item {
  display: flex;
  margin-bottom: 20rpx;
}

.reply-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  border: 2rpx solid var(--color-accent);
  flex-shrink: 0;
}

.reply-content {
  flex: 1;
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.reply-author {
  font-size: 26rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.reply-time {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

.reply-text {
  font-size: 26rpx;
  line-height: 1.4;
  color: #333;
  word-break: break-word;
  margin-bottom: 10rpx;
}

.reply-actions {
  display: flex;
  gap: 15rpx;
}

.reply-action {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  background-color: var(--color-bg-page);
  transition: background-color var(--transition-fast);
}

.reply-action:active {
  background-color: var(--color-border);
}

.reply-action.liked {
  background-color: rgba(230, 67, 64, 0.08);
}

.reply-action .action-icon {
  width: 20rpx;
  height: 20rpx;
}

.reply-action .action-text {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

.like-action.liked .action-text {
  color: var(--color-error);
}

/* 空评论状态 */
.empty-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  margin-bottom: 15rpx;
  font-weight: bold;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--color-text-disabled);
}

/* 底部评论输入栏 - 关键修复 */
.comment-input-bar {
  position: fixed;
  bottom: -100%;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1rpx solid #eee;
  padding: 20rpx 40rpx;
  transition: bottom 0.3s ease-in-out;
  z-index: 999;
}

.comment-input-bar.active {
  bottom: 0;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.comment-input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 72rpx;
}

.input-actions {
  display: flex;
  gap: 15rpx;
}

.cancel-btn,
.submit-btn {
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: background-color var(--transition-fast);
}

.cancel-btn {
  background-color: #f8f8f8;
  color: #666;
}

.cancel-btn:active {
  background-color: #e0e0e0;
}

.submit-btn {
  background-color: var(--color-primary);
  color: #ffffff;
}

.submit-btn:active {
  background-color: var(--color-primary-dark);
}

/* 固定评论按钮 */
.fixed-comment-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 15rpx;
  background-color: var(--color-primary);
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 47, 167, 0.4);
  z-index: 900;
  transition: transform var(--transition-normal);
}

.fixed-comment-btn:active {
  transform: translateX(-50%) scale(0.95);
}

.comment-icon {
  width: 32rpx;
  height: 32rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--color-text-secondary);
}

/* 无障碍优化 */
.action-btn,
.comment-action,
.reply-action,
.cancel-btn,
.submit-btn {
  min-height: 60rpx;
  min-width: 80rpx;
}

.fixed-comment-btn {
  min-height: 80rpx;
  min-width: 200rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .post-content-section,
  .comments-section {
    border: 3rpx solid var(--color-primary);
  }

  .action-btn,
  .comment-action,
  .reply-action {
    border: 2rpx solid var(--color-primary);
  }
}

/* 大字体模式支持 */
@media (prefers-font-size: large) {
  .content-text,
  .comment-text,
  .reply-text {
    font-size: 36rpx;
    line-height: 1.8;
  }

  .user-name,
  .comment-author,
  .reply-author {
    font-size: 40rpx;
  }

  .action-text {
    font-size: 32rpx;
  }
}
