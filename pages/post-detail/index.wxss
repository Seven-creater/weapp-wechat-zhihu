/* 帖子详情页样式 - 修复版 */

.post-detail-container {
  min-height: 100vh;
  background-color: var(--color-bg-page);
  padding-bottom: 160rpx;
}

/* 帖子内容区域 */
.post-content-section {
  background-color: #ffffff;
  border-radius: 0 0 30rpx 30rpx;
  padding: 40rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 帖子头部 */
.user-info-card {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background-color: #eee;
  flex-shrink: 0;
}

.info-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

/* 标签样式优化 */
.tag-badge {
  background: linear-gradient(90deg, #ff9800, #ffb74d);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  line-height: 1;
}

.tag-help {
  background: linear-gradient(90deg, #e64340, #ff6b6b);
}

.tag-share {
  background: linear-gradient(90deg, #00b42a, #34c759);
}

.tag-icon {
  margin-right: 4rpx;
  font-size: 16rpx;
}

.time-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.time {
  font-size: 24rpx;
  color: #999;
}

/* 删除按钮样式 - 红色圆角 */
.delete-btn {
  background-color: #ff4d4f;
  color: #ffffff;
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 30rpx;
}

.content-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-word;
}

/* 内容体容器 */
.content-body {
  padding: 0 10rpx;
  margin-bottom: 40rpx;
}

/* 1. 用户文字区 */
.user-text-section {
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-text {
  font-size: 34rpx;
  color: #1a1a1a;
  line-height: 1.6;
  font-weight: 500;
}

/* 2. AI 诊断卡片区 */
.ai-report-card {
  background-color: #f7f9fc;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #e6ebf5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.ai-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx dashed #ccd7e8;
}

.ai-icon {
  font-size: 36rpx;
  margin-right: 14rpx;
}

.ai-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #002fa7;
  margin-left: 10rpx;
}

.ai-content {
  font-size: 30rpx;
  color: #555;
  line-height: 1.7;
  text-align: justify;
}

/* 用户建议块 */
.user-suggestion-block {
  margin-bottom: 30rpx;
  background-color: #f5f5f5;
  border-left: 6rpx solid #002fa7;
  padding: 24rpx;
  border-radius: 8rpx;
}

.suggestion-blue-line {
  width: 6rpx;
  height: 100%;
  background-color: #002fa7;
}

.suggestion-content {
  display: flex;
  gap: 16rpx;
}

.suggestion-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #002fa7;
  flex-shrink: 0;
}

.suggestion-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-word;
}

/* 定位信息卡片 */
.location-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  background-color: rgba(0, 47, 167, 0.05);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.location-icon {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}

.location-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.location-label {
  font-size: 24rpx;
  color: var(--color-primary);
  font-weight: bold;
}

.location-text {
  font-size: 28rpx;
  color: var(--color-text-primary);
  line-height: 1.4;
  word-break: break-word;
}

/* 图片展示 */
.post-images {
  margin-bottom: 30rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

/* 底部操作栏 */
.post-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 30rpx;
  border-top: 2rpx solid var(--color-border);
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  background-color: transparent;
  transition: background-color var(--transition-fast);
  min-width: 140rpx;
  justify-content: center;
}

.action-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.action-btn.liked {
  background-color: rgba(230, 67, 64, 0.08);
}

.action-btn.collected {
  background-color: rgba(255, 215, 0, 0.12);
}

.action-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44rpx;
  height: 44rpx;
}

.action-icon.heart-icon,
.action-icon.star-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.like-btn.liked .action-text {
  color: #ff4d4f;
}

.collect-btn.collected .action-text {
  color: var(--color-accent);
}

/* 评论区 */
.comments-section {
  background-color: #ffffff;
  border-radius: 30rpx 30rpx;
  padding: 40rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--color-border);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.comment-count {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* 评论列表 */
.comments-list {
  margin-bottom: 40rpx;
}

.comment-item {
  margin-bottom: 40rpx;
}

/* 主评论 */
.main-comment {
  display: flex;
  margin-bottom: 20rpx;
}

.comment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid var(--color-accent);
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-author {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.comment-time {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.comment-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  word-break: break-word;
  margin-bottom: 15rpx;
}

.comment-actions {
  display: flex;
  gap: 20rpx;
}

.comment-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background-color: var(--color-bg-page);
  transition: background-color var(--transition-fast);
}

.comment-action:active {
  background-color: var(--color-border);
}

.comment-action.liked {
  background-color: rgba(230, 67, 64, 0.08);
}

.comment-action .action-icon {
  width: 24rpx;
  height: 24rpx;
}

.comment-action .action-text {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.like-action.liked .action-text {
  color: var(--color-error);
}

.reply-action.delete-action,
.comment-action.delete-action {
  background-color: rgba(255, 77, 77, 0.08);
}

.reply-action.delete-action .action-text,
.comment-action.delete-action .action-text {
  color: var(--color-error);
}

/* 回复列表 */
.replies-list {
  margin-left: 100rpx;
  border-left: 4rpx solid var(--color-border);
  padding-left: 20rpx;
}

.reply-item {
  display: flex;
  margin-bottom: 20rpx;
}

.reply-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  border: 2rpx solid var(--color-accent);
  flex-shrink: 0;
}

.reply-content {
  flex: 1;
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.reply-author {
  font-size: 26rpx;
  font-weight: bold;
  color: var(--color-text-primary);
}

.reply-time {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

.reply-text {
  font-size: 26rpx;
  line-height: 1.4;
  color: #333;
  word-break: break-word;
  margin-bottom: 10rpx;
}

.reply-actions {
  display: flex;
  gap: 15rpx;
}

.reply-action {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  background-color: var(--color-bg-page);
  transition: background-color var(--transition-fast);
}

.reply-action:active {
  background-color: var(--color-border);
}

.reply-action.liked {
  background-color: rgba(230, 67, 64, 0.08);
}

.reply-action .action-icon {
  width: 20rpx;
  height: 20rpx;
}

.reply-action .action-text {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

.like-action.liked .action-text {
  color: var(--color-error);
}

/* 空评论状态 */
.empty-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  margin-bottom: 15rpx;
  font-weight: bold;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--color-text-disabled);
}

/* 底部评论输入栏 - 关键修复 */
.footer-input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.input-wrapper {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.input-field {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.send-btn {
  font-size: 30rpx;
  color: #002fa7;
  font-weight: bold;
  padding: 10rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--color-text-secondary);
}

/* 无障碍优化 */
.action-btn,
.comment-action,
.reply-action,
.cancel-btn,
.submit-btn {
  min-height: 60rpx;
  min-width: 80rpx;
}

.fixed-comment-btn {
  min-height: 80rpx;
  min-width: 200rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .post-content-section,
  .comments-section {
    border: 3rpx solid var(--color-primary);
  }

  .action-btn,
  .comment-action,
  .reply-action {
    border: 2rpx solid var(--color-primary);
  }
}

/* 大字体模式支持 */
@media (prefers-font-size: large) {
  .content-text,
  .comment-text,
  .reply-text {
    font-size: 36rpx;
    line-height: 1.8;
  }

  .user-name,
  .comment-author,
  .reply-author {
    font-size: 40rpx;
  }

  .action-text {
    font-size: 32rpx;
  }
}
