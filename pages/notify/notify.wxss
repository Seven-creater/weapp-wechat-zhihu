/* pages/notify/notify.wxss */
.notify-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
}

/* Top Tabs */
.top-tabs {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 44px;
  border-bottom: 1px solid #eee;
}

.tab-item {
  font-size: 16px;
  color: #999;
  margin: 0 20px;
  position: relative;
  padding: 8px 0;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
  font-size: 18px;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background: #ff2442;
  border-radius: 2px;
}

/* Message List */
.message-list {
  flex: 1;
}

.message-item {
  display: flex;
  padding: 16px;
  border-bottom: 1px solid #f5f5f5;
}

.avatar-box {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.system-avatar {
  background: #e6f7ff;
}

.like-avatar {
  background: #fff0f6;
}

.comment-avatar {
  background: #e6fffb;
}

.follow-avatar {
  background: #fff7e6;
}

.avatar-icon {
  width: 24px;
  height: 24px;
}

.user-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  margin-right: 12px;
}

.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.message-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
}

.sender-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.message-time {
  font-size: 12px;
  color: #999;
}

.message-preview {
  font-size: 14px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.unread-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #ff2442;
  align-self: center;
  margin-left: 8px;
}

.unread-badge {
  min-width: 18px;
  height: 18px;
  border-radius: 9px;
  background: #ff2442;
  color: #fff;
  font-size: 12px;
  line-height: 18px;
  text-align: center;
  padding: 0 6px;
  align-self: center;
  margin-left: 8px;
}

.empty-state {
  padding: 40px 0;
  text-align: center;
  color: #999;
  font-size: 14px;
}

.list-footer {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 12px 0 20px;
}

.footer-text {
  font-size: 12px;
  color: #999;
}
