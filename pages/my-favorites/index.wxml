<view class="container">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">我的收藏</text>
  </view>
  
  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">
    <text class="loading-text">加载中...</text>
  </view>
  
  <!-- 收藏列表 -->
  <view class="favorites-list" wx:if="{{!loading}}">
    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{favoritesList.length === 0}}">
      <image class="empty-icon" src="../../images/star.png"></image>
      <text class="empty-text">暂无收藏内容</text>
    </view>
    
    <!-- 列表项 -->
    <view 
      class="favorite-item" 
      wx:for="{{favoritesList}}" 
      wx:key="_id" 
      bindtap="goToDetail" 
      data-index="{{index}}"
    >
      <!-- 左侧图片 -->
      <image class="item-image" src="{{item.image || '../../images/zhi.png'}}"></image>
      
      <!-- 右侧内容 -->
      <view class="item-content">
        <text class="item-title">{{item.title}}</text>
        <text class="item-type">{{item.type === 'collect_solution' ? '解决方案' : '社区帖子'}}</text>
        <text class="item-time">{{item.formatTime || item.createTime}}</text>
      </view>
      
      <!-- 箭头图标 -->
      <text class="item-arrow">></text>
    </view>
  </view>
</view>
