/* pages/renovation/renovation.wxss */
page {
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

.renovation-container {
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  width: 60rpx;
}

.section {
  background-color: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.diagnosis-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.scheme-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.scheme-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.scheme-item.active {
  background-color: #0a2463;
  border-color: #0a2463;
}

.scheme-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.scheme-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.scheme-item.active .scheme-name {
  color: #fff;
}

.scheme-desc {
  font-size: 24rpx;
  color: #999;
}

.scheme-item.active .scheme-desc {
  color: rgba(255,255,255,0.8);
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.input-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.label {
  font-size: 28rpx;
  color: #333;
}

.input-item input, .picker {
  text-align: right;
  font-size: 28rpx;
  color: #666;
}

.action-area {
  padding: 30rpx;
}

.generate-btn {
  background-color: #ffd700;
  color: #0a2463;
  font-weight: bold;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.result-section {
  background-color: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.plan-card {
  margin-bottom: 30rpx;
}

.plan-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  background-color: #eee;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.detail-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.budget-card {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.budget-table {
  width: 100%;
}

.table-header, .table-row, .table-footer {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #666;
}

.table-header {
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
  color: #333;
}

.table-footer {
  border-top: 1rpx solid #eee;
  font-weight: bold;
  color: #333;
  margin-top: 10rpx;
  padding-top: 20rpx;
}

.total-cost {
  color: #ff4d4f;
  font-size: 32rpx;
}

.disclaimer {
  font-size: 22rpx;
  color: #999;
  margin-top: 16rpx;
  display: block;
}

.next-btn {
  background-color: #0a2463;
  color: #fff;
  font-weight: bold;
  border-radius: 44rpx;
  font-size: 32rpx;
}
