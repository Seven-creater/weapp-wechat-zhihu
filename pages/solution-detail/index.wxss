/* 方案详情页样式 - 专业政务风格 */

page {
  background-color: #f5f6f8;
  padding-bottom: 120rpx;
}

/* 顶部大图 */
.hero-section {
  position: relative;
  width: 100%;
  height: 420rpx;
}

.hero-img {
  width: 100%;
  height: 100%;
}

.status-tag {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  background: rgba(0, 47, 167, 0.9);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

/* 内容卡片 */
.content-card {
  background: #fff;
  margin: -40rpx 30rpx 30rpx;
  padding: 40rpx;
  border-radius: 16rpx;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.blue-line {
  width: 8rpx;
  height: 36rpx;
  background: #002fa7;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 报告文本框 - 修复那个丑陋的黄框 */
.report-box {
  background: #f9fafc;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #eaeaea;
  margin-bottom: 20rpx;
}

.report-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  text-align: justify;
}

.info-row {
  font-size: 28rpx;
  color: #666;
  margin-top: 15rpx;
}

/* 底部栏 - 修复蓝块问题 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}

/* 收藏按钮 */
.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
  margin-right: 40rpx;
}

.icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
  color: #ffd700;
}

.btn-text {
  font-size: 22rpx;
}

/* 生成公文按钮 */
.main-btn {
  flex: 1;
  height: 88rpx;
  background: #002fa7;
  color: #fff;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}
