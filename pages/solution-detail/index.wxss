/* 解决方案详情页样式 - 大卡片流设计 */

.solution-detail-container {
  background-color: var(--color-bg-page);
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 封面图 Hero Section */
.hero-section {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.4) 60%, rgba(0, 0, 0, 0.7) 100%);
}

.hero-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--spacing-lg);
  color: var(--color-text-inverse);
}

.hero-tags {
  display: flex;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-sm);
}

.hero-tag {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: var(--font-size-xs);
  font-weight: bold;
  backdrop-filter: blur(10rpx);
  background-color: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.hero-tag.category {
  background-color: rgba(0, 47, 167, 0.8);
}

.hero-tag.status.solved {
  background-color: rgba(0, 180, 42, 0.8);
}

.hero-tag.status.processing {
  background-color: rgba(255, 157, 0, 0.8);
}

.hero-title {
  font-size: var(--font-size-xl);
  font-weight: bold;
  line-height: 1.4;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* 内容区域 */
.content-section {
  position: relative;
  margin-top: -40rpx;
  padding: 0 var(--spacing-lg);
}

/* AI 分析卡片 */
.ai-analysis-card {
  background-color: var(--color-bg-card);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-card);
  margin-bottom: var(--spacing-lg);
  border-left: 8rpx solid var(--color-accent);
}

.ai-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.ai-icon {
  width: 48rpx;
  height: 48rpx;
}

.ai-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--color-primary);
}

.ai-content {
  background-color: #FFFAE6;
  border-radius: var(--border-radius-md);
  padding: var(--spacing-md);
  border-left: 4rpx solid var(--color-primary);
}

.ai-text {
  font-size: var(--font-size-base);
  line-height: 1.8;
  color: var(--color-text-primary);
  white-space: pre-wrap;
  word-break: break-word;
}

/* 改造后效果 */
.after-section {
  margin-bottom: var(--spacing-lg);
}

.section-header {
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--color-text-primary);
}

.after-image-wrapper {
  background-color: var(--color-bg-card);
  border-radius: var(--border-radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-card);
}

.after-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

/* 官方回复 */
.official-reply-section {
  margin-bottom: var(--spacing-lg);
}

.reply-card {
  background-color: var(--color-bg-card);
  border-radius: var(--border-radius-md);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-card);
  border-left: 4rpx solid var(--color-primary);
}

.reply-text {
  font-size: var(--font-size-base);
  line-height: 1.8;
  color: var(--color-text-primary);
  white-space: pre-wrap;
  word-break: break-word;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--color-bg-card);
  padding: var(--spacing-md) var(--spacing-lg);
  padding-bottom: calc(var(--spacing-md) + env(safe-area-inset-bottom));
  border-top: 1rpx solid var(--color-border);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: var(--spacing-md);
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  border-radius: var(--border-radius-lg);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  font-size: var(--font-size-base);
  font-weight: bold;
  transition: all var(--transition-fast);
  box-shadow: var(--shadow-button);
}

.action-btn:active {
  transform: scale(0.95);
}

.collect-btn {
  background-color: var(--color-bg-page);
  color: var(--color-text-secondary);
  border: 2rpx solid var(--color-border);
  box-shadow: none;
}

.collect-btn.collected {
  background-color: var(--color-accent);
  color: var(--color-primary);
  border-color: var(--color-accent);
}

.copy-btn {
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
}

.generate-btn {
  background-color: var(--color-error);
  color: var(--color-text-inverse);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

.btn-text {
  font-size: var(--font-size-base);
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}

.modal.show {
  display: block;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 640rpx;
  max-height: 80vh;
  background-color: var(--color-bg-card);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--color-text-primary);
}

.modal-close {
  font-size: 48rpx;
  color: var(--color-text-secondary);
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-lg);
}

.letter-content {
  background-color: var(--color-bg-page);
  padding: var(--spacing-lg);
  border-radius: var(--border-radius-md);
}

.letter-text {
  font-size: var(--font-size-sm);
  line-height: 1.8;
  color: var(--color-text-primary);
  white-space: pre-wrap;
  word-break: break-word;
}

.modal-footer {
  padding: var(--spacing-md) var(--spacing-lg);
  border-top: 1rpx solid var(--color-border);
  display: flex;
  gap: var(--spacing-md);
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: var(--border-radius-lg);
  border: none;
  font-size: var(--font-size-base);
  font-weight: bold;
}

.copy-letter-btn {
  background-color: var(--color-primary);
  color: var(--color-text-inverse);
}

.close-btn {
  background-color: var(--color-bg-page);
  color: var(--color-text-secondary);
  border: 2rpx solid var(--color-border);
}

/* 无障碍优化 */
.action-btn,
.modal-btn {
  min-height: 96rpx;
}

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .ai-analysis-card,
  .reply-card {
    border: 3rpx solid var(--color-primary);
  }

  .action-btn {
    border: 2rpx solid var(--color-primary);
  }
}

/* 大字体模式支持 */
@media (prefers-font-size: large) {
  .ai-text,
  .reply-text,
  .letter-text {
    font-size: var(--font-size-lg);
    line-height: 2;
  }

  .hero-title {
    font-size: 56rpx;
  }
}
