/* 个人资料编辑页 */
.profile-edit-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 32rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
}

.avatar-btn {
  background: transparent;
  padding: 0;
  line-height: normal;
  border: none;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #ffd700;
}

.avatar-hint {
  font-size: 26rpx;
  color: #999999;
  margin-top: 16rpx;
}

.name-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.name-input {
  font-size: 30rpx;
  color: #333333;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.footer-actions {
  margin-top: 48rpx;
}

.save-btn {
  width: 100%;
  background: #002fa7;
  color: #ffffff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 24rpx 0;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn[loading] {
  opacity: 0.7;
}
