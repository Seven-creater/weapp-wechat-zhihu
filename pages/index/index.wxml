<view class="accessibility-home">
  <!-- 页面头部 -->
  <view class="page-header" aria-label="无障碍随手拍首页">
    <text class="page-title">无障碍随手拍</text>
    <text class="page-subtitle">发现无障碍问题，一键反馈</text>
  </view>

  <view class="location-card" aria-label="当前位置">
    <view class="location-info">
      <image class="location-icon" src="/images/location.png" aria-hidden="true"></image>
      <text class="location-text">{{currentAddress || "定位中"}}</text>
    </view>
    <view class="location-action" bindtap="reselectLocation" aria-role="button" aria-label="重新选择位置">
      <text class="location-action-text">重新选点</text>
    </view>
  </view>

  <!-- 主要内容区域 -->
  <view class="main-content">
    <!-- 拍照按钮 -->
    <view 
      class="camera-button" 
      bindtap="takePhoto" 
      aria-role="button"
      aria-label="点击拍照反馈无障碍问题"
      hover-class="camera-button-hover"
    >
      <image class="camera-icon" src="/images/camera.png" aria-hidden="true"></image>
      <text class="camera-text">拍照反馈</text>
    </view>

    <!-- 功能说明 -->
    <view class="feature-intro">
      <view class="feature-item" aria-label="自动定位问题地点功能">
        <image class="feature-icon" src="/images/location.png" aria-hidden="true"></image>
        <text class="feature-text">自动定位问题地点</text>
      </view>
      <view class="feature-item" aria-label="AI智能分析解决方案功能">
        <image class="feature-icon" src="/images/ai.png" aria-hidden="true"></image>
        <text class="feature-text">AI智能分析解决方案</text>
      </view>
      <view class="feature-item" aria-label="生成专业汇报材料功能">
        <image class="feature-icon" src="/images/report.png" aria-hidden="true"></image>
        <text class="feature-text">生成专业汇报材料</text>
      </view>
    </view>

    <!-- 最近反馈列表（可选） -->
    <view class="recent-reports" wx:if="{{recentReports.length > 0}}">
      <text class="section-title">最近反馈</text>
      <view class="report-list">
        <view class="report-item" wx:for="{{recentReports}}" wx:key="_id">
          <image class="report-image" src="{{item.imageUrl}}" aria-label="问题图片"></image>
          <view class="report-info">
            <text class="report-location">{{item.address}}</text>
            <text class="report-status {{item.status === 'pending' ? 'waiting' : 'submitted'}}">{{item.status === 'pending' ? '待处理' : '已上报'}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部说明 -->
  <view class="page-footer">
    <text class="footer-text">我们一起让城市更美好</text>
  </view>
</view>