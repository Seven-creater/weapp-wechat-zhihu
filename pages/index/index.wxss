/* 基础样式重置 */
view,
text,
button,
image {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 页面主容器 */
.accessibility-home {
  background-color: #0a2463;
  min-height: 100vh;
  padding: 40rpx;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 40rpx;
}

.page-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  display: block;
}

.page-subtitle {
  font-size: 32rpx;
  color: #cddafd;
  display: block;
}

/* 主要内容区域 */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 80rpx;
}

/* 拍照按钮 */
.camera-button {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background-color: #ffd700;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  box-shadow: 0 12rpx 24rpx rgba(255, 215, 0, 0.4);
}

.camera-button-hover {
  transform: scale(0.95);
  box-shadow: 0 8rpx 16rpx rgba(255, 215, 0, 0.5);
}

.camera-icon {
  width: 160rpx;
  height: 160rpx;
}

.camera-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #0a2463;
}

/* 功能说明 */
.feature-intro {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  width: 100%;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 30rpx;
  background-color: #ffffff;
  padding: 36rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.feature-icon {
  width: 64rpx;
  height: 64rpx;
}

.feature-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #0a2463;
  flex: 1;
}

/* 最近反馈列表 */
.recent-reports {
  width: 100%;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 30rpx;
  display: block;
}

.report-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.report-item {
  display: flex;
  gap: 30rpx;
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  align-items: center;
}

.report-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.report-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.report-location {
  font-size: 32rpx;
  font-weight: bold;
  color: #0a2463;
}

.report-status {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.report-status.waiting {
  background-color: #ffd700;
  color: #0a2463;
}

.report-status.submitted {
  background-color: #4caf50;
  color: #ffffff;
}

/* 底部说明 */
.page-footer {
  text-align: center;
  margin-top: 100rpx;
  padding-bottom: 40rpx;
}

.footer-text {
  font-size: 32rpx;
  color: #cddafd;
}
