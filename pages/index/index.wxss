.waterfall-container {
  background-color: #f7f7f7;
  padding: 20rpx;
  min-height: 100vh;
}

.waterfall-columns {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.waterfall-column {
  width: calc(50% - 10rpx);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.case-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.case-image {
  width: 100%;
  display: block;
}

.case-info {
  padding: 20rpx;
}

.case-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.case-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.author-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.author-name {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 180rpx;
}

.case-views {
  font-size: 24rpx;
  color: #999;
}