/* ============================================
   首页样式 - 无障碍随手拍
   使用全局设计系统
   ============================================ */

/* 基础重置 */
view,
text,
image {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 页面主容器 */
.accessibility-home {
  min-height: 100vh;
  background-color: var(--color-bg-page);
}

/* 顶部定位信息胶囊 */
.hero-section {
  position: relative;
  height: 42vh;
  min-height: 600rpx;
  overflow: hidden;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    180deg,
    var(--color-primary) 0%,
    #0033a6 60%,
    #0040c4 100%
  );
}

.hero-bg::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(
      circle at 20% 80%,
      rgba(255, 215, 0, 0.15) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(255, 215, 0, 0.1) 0%,
      transparent 40%
    ),
    radial-gradient(
      circle at 50% 50%,
      rgba(255, 255, 255, 0.05) 0%,
      transparent 60%
    );
}

/* 定位胶囊 */
.location-capsule {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 30rpx);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: var(--color-bg-card);
  padding: 16rpx 24rpx 16rpx 20rpx;
  border-radius: 100rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15), 0 2rpx 8rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  z-index: 10;
  max-width: 90%;
}

.location-icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.location-icon-small {
  width: 36rpx;
  height: 36rpx;
}

.location-address {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400rpx;
}

.refresh-btn {
  flex-shrink: 0;
  background: var(--color-primary);
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
}

.refresh-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-inverse);
  font-weight: 500;
}

/* 英雄区域内容 */
.hero-content {
  position: absolute;
  top: 28%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 5;
}

/* 拍照按钮 - 主视觉 */
.camera-hero {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.camera-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 380rpx;
  height: 380rpx;
  background: radial-gradient(
    circle,
    rgba(255, 215, 0, 0.3) 0%,
    transparent 70%
  );
  border-radius: 50%;
  animation: pulse-glow 2s ease-in-out infinite;
}

.camera-inner {
  width: 320rpx;
  height: 320rpx;
  background: var(--color-accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 48rpx rgba(255, 215, 0, 0.4),
    0 8rpx 24rpx rgba(255, 215, 0, 0.2), inset 0 -4rpx 16rpx rgba(0, 0, 0, 0.1),
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.3);
}

.camera-icon-large {
  width: 140rpx;
  height: 140rpx;
}

.camera-label {
  margin-top: 24rpx;
  font-size: var(--font-size-xl);
  font-weight: 700;
  color: var(--color-text-inverse);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 4rpx;
}

.camera-hero-hover .camera-inner {
  transform: scale(0.95);
  box-shadow: 0 12rpx 40rpx rgba(255, 215, 0, 0.5),
    inset 0 -2rpx 12rpx rgba(0, 0, 0, 0.15);
}

.camera-hero-hover .camera-glow {
  animation: none;
  transform: translate(-50%, -50%) scale(1.1);
}

@keyframes pulse-glow {
  0%,
  100% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

/* ============================================
   功能区 (Features Section)
   ============================================ */
.features-section {
  padding: var(--spacing-xl) var(--spacing-lg);
  background-color: var(--color-bg-page);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--color-text-primary);
}

.section-more {
  font-size: var(--font-size-sm);
  color: var(--color-primary);
  font-weight: 500;
}

/* 功能卡片网格 */
.features-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-md);
}

.feature-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-card);
  padding: var(--spacing-lg) var(--spacing-sm);
  border-radius: var(--border-radius-md);
  box-shadow: var(--shadow-card);
  transition: all var(--transition-normal);
}

.feature-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-card-hover);
}

.feature-icon-wrap {
  width: 96rpx;
  height: 96rpx;
  border-radius: var(--border-radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-sm);
}

.feature-icon-img {
  width: 56rpx;
  height: 56rpx;
}

.bg-solution {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
}

.bg-community {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
}

.bg-report {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
}

.bg-history {
  background: linear-gradient(135deg, #fce4ec 0%, #f8bbd9 100%);
}

.feature-card-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 4rpx;
}

.feature-card-desc {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

/* ============================================
   最近反馈区 (Recent Section)
   ============================================ */
.recent-section {
  padding: var(--spacing-lg);
  padding-bottom: var(--spacing-xl);
  background-color: var(--color-bg-page);
}

.recent-scroll {
  white-space: nowrap;
  width: 100%;
}

.recent-list {
  display: inline-flex;
  gap: var(--spacing-md);
  padding: var(--spacing-sm) 0;
}

.recent-card {
  display: inline-flex;
  flex-direction: column;
  background: var(--color-bg-card);
  border-radius: var(--border-radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-card);
  width: 280rpx;
  flex-shrink: 0;
}

.recent-image {
  width: 100%;
  height: 180rpx;
  background-color: var(--color-border);
}

.recent-info {
  padding: var(--spacing-sm) var(--spacing-md);
}

.recent-address {
  display: block;
  font-size: var(--font-size-sm);
  font-weight: 500;
  color: var(--color-text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.recent-status {
  display: inline-flex;
  padding: 4rpx 12rpx;
  border-radius: var(--border-radius-full);
}

.status-pending {
  background: rgba(255, 157, 0, 0.1);
}

.status-done {
  background: rgba(0, 180, 42, 0.1);
}

.status-text {
  font-size: var(--font-size-xs);
  font-weight: 500;
}

.status-pending .status-text {
  color: var(--color-warning);
}

.status-done .status-text {
  color: var(--color-success);
}

/* ============================================
   底部说明
   ============================================ */
.footer-note {
  padding: var(--spacing-xl) var(--spacing-lg);
  text-align: center;
  background: linear-gradient(
    180deg,
    transparent 0%,
    var(--color-bg-page) 100%
  );
}

.footer-slogan {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  letter-spacing: 2rpx;
}

/* ============================================
   无障碍辅助类
   ============================================ */
.sr-only {
  position: absolute;
  width: 1rpx;
  height: 1rpx;
  padding: 0;
  margin: -1rpx;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}
