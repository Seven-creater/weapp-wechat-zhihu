/* pages/test-diagnosis/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.actions {
  margin-bottom: 40rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(245, 87, 108, 0.3);
}

.btn-primary[disabled] {
  background: rgba(255, 255, 255, 0.3);
  box-shadow: none;
}

.result-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.btn-copy {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
}

.result-content {
  max-height: 800rpx;
  overflow-y: auto;
}

.result-text {
  font-size: 26rpx;
  line-height: 44rpx;
  color: #333333;
  font-family: 'Courier New', monospace;
  white-space: pre-wrap;
  word-break: break-all;
}

.tips {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10px);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #ffffff;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
}

.btn-secondary {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  font-size: 28rpx;
  backdrop-filter: blur(10px);
}

