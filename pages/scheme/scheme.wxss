.scheme-container {
  padding: 0 16rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  display: flex;
  gap: 32rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.filter-bar {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  background: white;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  overflow-x: auto;
}

.type-tabs {
  white-space: nowrap;
  padding: 12rpx 0;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.type-tab {
  display: inline-flex;
  padding: 14rpx 24rpx;
  margin-right: 12rpx;
  border-radius: 999px;
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
}

.type-tab.active {
  background: #2b6ef2;
  color: #fff;
  font-weight: 600;
}

.filter-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  white-space: nowrap;
}

.filter-item .arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
  transform: rotate(90deg);
  opacity: 0.5;
}

.empty,
.loading {
  padding: 30rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 筛选弹窗样式 */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.popup-content {
  background: white;
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  background: white;
  z-index: 10;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn {
  font-size: 28rpx;
  color: #666;
}

.confirm-btn {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: bold;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx 32rpx;
  gap: 16rpx;
}

.option-item {
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 28rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  white-space: nowrap;
}

.option-item.active {
  background: #e8f4ff;
  color: #007AFF;
}

/* 案例列表样式 */
.scheme-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.scheme-item {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.scheme-image {
  width: 100%;
  height: 280rpx;
}

.scheme-info {
  padding: 16rpx;
}

.scheme-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.scheme-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.scheme-tags .tag {
  font-size: 20rpx;
  color: #007AFF;
  background: #e8f4ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.scheme-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.scheme-author {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
