/* pages/cases/detail/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 120rpx;
}

.header {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.header-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 40rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
}

.badge-icon {
  font-size: 24rpx;
}

.badge-text {
  font-size: 22rpx;
  font-weight: 600;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.header-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.9;
}

.meta-item {
  margin-right: 8rpx;
}

.meta-divider {
  margin: 0 8rpx;
}

.score-section {
  background: #fff;
  margin: 30rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.score-title {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.score-total {
  font-size: 80rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 30rpx;
}

.score-details {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f3f4f6;
}

.score-detail-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #f59e0b;
}

.info-section {
  background: #fff;
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.info-label {
  font-size: 24rpx;
  color: #6b7280;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.nodes-section {
  background: #fff;
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.node-card {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.node-card:last-child {
  margin-bottom: 0;
}

.node-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.node-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.node-date {
  font-size: 24rpx;
  color: #9ca3af;
}

.node-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.node-image {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
  background: #e5e7eb;
}

.node-desc {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 12rpx;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
}

.node-cost {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.cost-label {
  font-size: 24rpx;
  color: #6b7280;
}

.cost-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #f59e0b;
}

.contractor-section {
  background: #fff;
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.contractor-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 16rpx;
}

.contractor-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #fff;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.contractor-info {
  flex: 1;
}

.contractor-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #78350f;
  margin-bottom: 8rpx;
}

.contractor-stats {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #92400e;
}

.stat-item {
  margin-right: 8rpx;
}

.stat-divider {
  margin: 0 8rpx;
}

.contractor-arrow {
  font-size: 48rpx;
  color: #d97706;
  font-weight: 300;
}

.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.contact-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.4);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 32rpx;
}

.loading {
  padding: 100rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #9ca3af;
}
