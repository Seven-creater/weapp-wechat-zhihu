/* 全局样式 */
.case-detail-container {
  background-color: #fafafa;
  min-height: 100vh;
  padding-bottom: 180rpx; /* 为底部固定栏和评论输入框预留空间 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.6;
}

/* 顶部导航栏 */
.custom-navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left, .nav-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 头部信息区 */
.header-info {
  padding: 40rpx 30rpx;
  background-color: white;
  margin-bottom: 10rpx;
}

.h1-title {
  display: block;
  font-size: 38rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 56rpx;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
}

/* 元数据网格 */
.meta-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.meta-item {
  display: flex;
  flex-direction: column;
}

.meta-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.meta-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 主图展示 */
.hero-image-container {
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.hero-image {
  width: 100%;
  height: auto;
  border-radius: 12rpx;
  display: block;
}

/* 正文内容区 */
.rich-content {
  padding: 0 30rpx;
  background-color: white;
  margin-bottom: 10rpx;
  padding-bottom: 40rpx;
}

.content-section {
  margin-bottom: 32rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 48rpx;
}

.content-image-container {
  margin: 32rpx 0;
}

.content-image {
  width: 100%;
  height: auto;
  border-radius: 12rpx;
  display: block;
  margin-bottom: 16rpx;
}

.image-caption {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.highlight-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  background-color: #fff9c4;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  margin: 24rpx 0;
}

/* 评论区 */
.comments-section {
  padding: 40rpx 30rpx;
  background-color: white;
  margin-bottom: 10rpx;
}

.comment-list {
  margin-top: 24rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  object-fit: cover;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment-author {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 42rpx;
  margin-bottom: 16rpx;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
}

.comment-like {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.like-icon {
  width: 28rpx;
  height: 28rpx;
}

.like-count {
  font-size: 22rpx;
  color: #999;
}

/* 项目图库 */
.project-gallery {
  padding: 40rpx 30rpx;
  background-color: white;
  margin-bottom: 10rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.gallery-swiper-container {
  border-radius: 12rpx;
  overflow: hidden;
}

.gallery-swiper {
  height: 400rpx;
}

.gallery-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 设计师卡片 */
.designer-section {
  padding: 40rpx 30rpx;
  background-color: white;
  margin-bottom: 10rpx;
}

.designer-card {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.designer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  object-fit: cover;
}

.designer-info {
  flex: 1;
}

.designer-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.designer-bio {
  font-size: 24rpx;
  color: #666;
}

.follow-btn {
  margin: 0;
  background-color: #007AFF;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 0 24rpx;
  height: 44rpx;
  line-height: 44rpx;
}

/* 底部标签区 */
.tags-section {
  padding: 40rpx 30rpx;
  background-color: white;
  margin-bottom: 10rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  font-size: 26rpx;
  color: #555;
  background-color: #f0f0f0;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  white-space: nowrap;
}

/* 底部操作栏 */
.fixed-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background-color: white;
  border-top: 1rpx solid #eee;
  z-index: 99;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
}

/* 底部评论栏样式 */
.comment-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx; /* 固定高度，防止对不齐 */
  background: #ffffff;
  border-top: 1rpx solid #eeeeee;
  display: flex;
  align-items: center; /* 关键：垂直居中 */
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
  z-index: 999;
  padding-bottom: env(safe-area-inset-bottom); /* 适配 iPhone 底部黑条 */
}

.btn-cancel {
  font-size: 28rpx;
  color: #666;
  padding: 0 20rpx;
}

.input-wrapper {
  flex: 1; /* 占据剩余空间 */
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.comment-input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.btn-send {
  font-size: 28rpx;
  font-weight: bold;
  color: #ccc; /* 默认灰色 */
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

/* 当有输入内容时的样式 */
.btn-send.active {
  color: #fff;
  background: #07c160; /* 微信绿 */
}

/* 响应式设计 */
@media (max-width: 375px) {
  .meta-grid {
    grid-template-columns: 1fr;
  }
  
  .gallery-swiper {
    height: 300rpx;
  }
  
  .comment-input-container {
    padding: 20rpx 20rpx;
  }
}
