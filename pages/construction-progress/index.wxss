/* pages/construction-progress/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #e5e7eb;
  border-top-color: #10b981;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #6b7280;
  font-size: 28rpx;
}

/* 内容区域 */
.content {
  padding: 20rpx;
}

/* 项目头部 */
.project-header {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.project-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  flex: 1;
}

.project-status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fef3c7;
  color: #92400e;
}

.status-confirmed {
  background: #dbeafe;
  color: #1e40af;
}

.status-in_progress {
  background: #d1fae5;
  color: #065f46;
}

.status-completed {
  background: #d1fae5;
  color: #065f46;
}

.status-cancelled {
  background: #fee2e2;
  color: #991b1b;
}

/* 进度区域 */
.progress-section {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #6b7280;
}

.progress-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #10b981;
}

.progress-bar {
  height: 16rpx;
  background: #e5e7eb;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #10b981, #34d399);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-info {
  display: flex;
  justify-content: space-between;
}

.info-item {
  font-size: 24rpx;
  color: #6b7280;
}

/* 造价区域 */
.cost-section {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 20rpx;
}

.cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.cost-item:last-child {
  border-bottom: none;
}

.cost-item.total {
  padding-top: 20rpx;
  border-top: 2rpx solid #e5e7eb;
}

.cost-label {
  font-size: 28rpx;
  color: #6b7280;
}

.cost-item.total .cost-label {
  font-weight: 600;
  color: #111827;
}

.cost-value {
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
}

.cost-item.total .cost-value {
  font-size: 32rpx;
  color: #10b981;
  font-weight: 600;
}

/* 施工团队区域 */
.team-section {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.team-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.team-info {
  flex: 1;
}

.team-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  display: block;
  margin-bottom: 10rpx;
}

.team-rating {
  margin-bottom: 10rpx;
}

.rating-score {
  font-size: 28rpx;
  font-weight: 600;
  color: #f59e0b;
}

.rating-text {
  font-size: 24rpx;
  color: #6b7280;
  margin-left: 4rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #9ca3af;
  margin-left: 10rpx;
}

.team-contact {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

.team-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.btn-contact,
.btn-detail {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: none;
}

.btn-contact {
  background: #10b981;
  color: white;
}

.btn-detail {
  background: #f3f4f6;
  color: #6b7280;
}

/* 里程碑时间线 */
.milestone-section {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 20rpx;
  bottom: 20rpx;
  width: 2rpx;
  background: #e5e7eb;
}

.timeline-item {
  position: relative;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -34rpx;
  top: 8rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #10b981;
  border: 4rpx solid white;
  box-shadow: 0 0 0 2rpx #10b981;
}

.timeline-content {
  padding-left: 20rpx;
}

.milestone-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.milestone-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #111827;
  flex: 1;
}

.milestone-progress {
  font-size: 24rpx;
  color: #10b981;
  font-weight: 600;
}

.milestone-time {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 10rpx;
}

.milestone-notes {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
  margin-bottom: 10rpx;
}

.milestone-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.milestone-photo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 操作按钮 */
.action-section {
  padding: 20rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #10b981, #34d399);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-height: 80vh;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.modal-close {
  font-size: 40rpx;
  color: #9ca3af;
  line-height: 1;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.form-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.photo-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.photo-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.photo-remove {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ef4444;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.photo-add {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
}

.add-icon {
  font-size: 60rpx;
  color: #9ca3af;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f3f4f6;
  display: flex;
  gap: 20rpx;
}

.btn-cancel,
.btn-submit {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.btn-cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-submit {
  background: #10b981;
  color: white;
}









