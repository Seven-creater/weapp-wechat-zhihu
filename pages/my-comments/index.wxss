/* 小红书风格评论页面 */
.container {
  background-color: #f6f6f6;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  height: 88rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eeeeee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 评论列表 */
.comments-list {
  padding: 20rpx 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 评论项 */
.comment-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
}

.comment-content {
  margin-bottom: 20rpx;
}

.comment-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-title {
  font-size: 26rpx;
  color: #999999;
  flex: 1;
}

.item-arrow {
  font-size: 28rpx;
  color: #cccccc;
  margin-left: 20rpx;
}
