.my-issues-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  background-color: #002fa7;
  padding: 40rpx 30rpx;
  color: #ffffff;
}

.page-title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}

.tab-bar {
  display: flex;
  background-color: #002fa7;
  padding: 0 20rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 28rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: bold;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #FFD700;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 6rpx;
  background-color: #FFD700;
  border-radius: 3rpx 3rpx 0 0;
}

.tab-content {
  padding: 30rpx;
  min-height: calc(100vh - 200rpx);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #666666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.empty-btn {
  background-color: #002fa7;
  color: #ffffff;
  border: none;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: bold;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  min-height: 80rpx;
}

.issues-list,
.posts-list {
  padding-bottom: 20rpx;
}

.issue-item,
.post-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.issue-item:active,
.post-item:active {
  transform: scale(0.98);
}

.item-image {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.item-image image {
  width: 100%;
  height: 100%;
}

.status-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.status-tag.waiting {
  background-color: #FF9800;
}

.status-tag.solved {
  background-color: #4CAF50;
}

.item-content {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.item-location {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.item-time {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.ai-suggestion {
  background-color: #E8F4FD;
  padding: 16rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #2196F3;
  margin-top: auto;
}

.suggestion-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #1976D2;
  margin-right: 8rpx;
}

.suggestion-text {
  font-size: 24rpx;
  color: #333333;
  line-height: 1.4;
}

.item-arrow {
  padding: 0 24rpx 0 16rpx;
  display: flex;
  align-items: center;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.post-item {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.post-user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.post-user-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 6rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999999;
}

.post-content {
  margin-bottom: 20rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
}

.post-footer {
  margin-bottom: 20rpx;
}

.post-thumbnail {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.post-stats {
  display: flex;
  gap: 40rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.stat-icon {
  width: 36rpx;
  height: 36rpx;
}

.stat-text {
  font-size: 28rpx;
  color: #666666;
}

.loading-state {
  text-align: center;
  padding: 60rpx;
  color: #999999;
  font-size: 28rpx;
}

.load-more,
.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

.load-more {
  color: #002fa7;
}

@media (min-width: 768px) {
  .issue-item {
    display: flex;
  }

  .tab-text {
    font-size: 32rpx;
  }

  .item-title {
    font-size: 34rpx;
  }

  .post-text {
    font-size: 32rpx;
  }
}
