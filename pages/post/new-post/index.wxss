/* pages/post/new-post/index.wxss */
.create-post-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
}

/* Header */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
  height: 44px;
  border-bottom: 1px solid #eee;
}

.cancel-btn {
  font-size: 16px;
  color: #333;
}

.submit-btn {
  font-size: 14px;
  color: #fff;
  background-color: #ccc;
  padding: 6px 16px;
  border-radius: 16px;
}

.submit-btn.active {
  background-color: #ff2442;
}

/* Content Scroll */
.content-scroll {
  flex: 1;
  padding: 16px;
}

/* Image Uploader */
.image-uploader {
  margin-bottom: 20px;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.image-item {
  position: relative;
  width: 31%;
  padding-bottom: 31%;
  border-radius: 4px;
  overflow: hidden;
}

.image-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 4px;
  right: 4px;
  width: 20px;
  height: 20px;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

.add-btn {
  width: 31%;
  padding-bottom: 31%;
  background: #f5f5f5;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.plus {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 40px;
  color: #ccc;
  font-weight: 300;
}

/* Inputs */
.input-group {
  margin-bottom: 16px;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 16px;
}

.title-input {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  width: 100%;
}

.content-input {
  font-size: 16px;
  color: #333;
  width: 100%;
  min-height: 100px;
}

.placeholder {
  color: #999;
}

/* Options */
.options-list {
  margin-top: 20px;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #f5f5f5;
}

.option-left {
  display: flex;
  align-items: center;
}

.option-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}

.option-text {
  font-size: 16px;
  color: #333;
}

.option-label {
  font-size: 16px;
  color: #333;
  margin-right: 16px;
}

.arrow {
  color: #ccc;
}

/* Radio Group */
.radio-group {
  display: flex;
  gap: 12px;
}

.radio-item {
  padding: 4px 12px;
  border-radius: 14px;
  background: #f5f5f5;
  color: #666;
  font-size: 14px;
}

.radio-item.active {
  background: #ff2442;
  color: #fff;
}
