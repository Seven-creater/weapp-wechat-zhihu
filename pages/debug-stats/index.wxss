.container {
  padding: 40rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.content {
  background: #f5f5f5;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  min-height: 600rpx;
}

.result {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  white-space: pre-wrap;
  word-break: break-all;
}

.buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
}

.btn.primary {
  background: #5b7ce6;
  color: white;
}

