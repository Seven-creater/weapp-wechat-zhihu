
<view class="container">
  <!-- 全局背景 -->
  
  <!-- 顶部用户信息区 -->
  <view class="header">
    <image 
      class="avatar" 
      src="{{userInfo ? userInfo.avatarUrl : '../../images/default-avatar.png'}}" 
      bindtap="handleLogin"
    ></image>
    <view class="user-info" bindtap="handleLogin">
      <text class="nickname">{{userInfo ? userInfo.nickName : '点击登录'}}</text>
      <text class="bio" wx:if="{{userInfo}}">微信用户 | 分享生活点滴</text>
    </view>
  </view>
  
  <!-- 数据统计栏 -->
  <view class="stats">
    <view class="stat-item">
      <text class="stat-number">{{stats.collect}}</text>
      <text class="stat-label">收藏</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{stats.comment}}</text>
      <text class="stat-label">评论</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{stats.like}}</text>
      <text class="stat-label">获赞</text>
    </view>
  </view>
  
  <!-- 功能菜单卡片 -->
  <view class="menu-card">
    <view class="menu-item" bindtap="handleNav" data-url="/pages/my-favorites/index">
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleNav" data-url="/pages/my-comments/index">
      <text class="menu-text">我的评论</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleNav" data-url="">
      <text class="menu-text">联系客服</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleNav" data-url="logout" wx:if="{{userInfo}}">
      <text class="menu-text" style="color: #FF3B30;">退出登录</text>
      <text class="menu-arrow">></text>
    </view>
  </view>
</view>
