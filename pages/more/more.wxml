<view class="page-bg">
  <!-- 1. 头部用户信息区 -->
  <view class="header-card" bindtap="handleLogin">
    <view class="avatar-box">
      <image class="avatar" src="{{userInfo.avatarUrl || 'https://mmbiz.qpic.cn/mmbiz/icTdbqWNOwNRna42FI242Lcia07jQodd2FJGIYQfG0LAJGFxM4FbnQP6yfMxBgJ0F3YRqJCJ1aPAK2dQagdusBZg/0'}}"></image>
    </view>
    <view class="info-box">
      <view class="nickname">{{userInfo.nickName || '点击登录账户'}}</view>
      <view class="tips">{{userInfo ? '查看个人主页 >' : '登录后同步收藏与评论'}}</view>
    </view>
  </view>
  
  <!-- 2. 数据统计区 -->
  <view class="stats-card">
    <view class="stat-item">
      <text class="num">0</text>
      <text class="label">收藏</text>
    </view>
    <view class="stat-item">
      <text class="num">0</text>
      <text class="label">关注</text>
    </view>
    <view class="stat-item">
      <text class="num">0</text>
      <text class="label">足迹</text>
    </view>
  </view>
  
  <!-- 3. 功能菜单区 -->
  <view class="menu-card">
    <!-- 我的收藏 -->
    <view class="menu-item" bindtap="handleNav" data-path="/pages/my-favorites/index">
      <view class="item-left">
        <text class="icon">⭐</text>
        <text class="text">我的收藏</text>
      </view>
      <text class="arrow">></text>
    </view>
  
    <!-- 我的评论 -->
    <view class="menu-item" bindtap="handleNav" data-path="/pages/my-comments/index">
      <view class="item-left">
        <text class="icon">💬</text>
        <text class="text">我的评论</text>
      </view>
      <text class="arrow">></text>
    </view>
  
    <!-- 退出登录 -->
    <view class="menu-item" bindtap="handleLogout" wx:if="{{userInfo}}">
      <view class="item-left">
        <text class="icon">🚪</text>
        <text class="text">退出登录</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>
</view>