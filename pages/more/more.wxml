
<view class="container">
  <!-- 顶部背景区 -->
  <view class="top-bg"></view>
  
  <!-- 用户信息卡片 -->
  <view class="user-card" bindtap="handleLogin">
    <image 
      class="avatar" 
      src="{{userInfo ? userInfo.avatarUrl : '../../images/default-avatar.png'}}" 
    ></image>
    <view class="user-info">
      <text class="nickname">{{userInfo ? userInfo.nickName : '点击登录体验更多功能'}}</text>
      <text class="bio" wx:if="{{userInfo}}">微信用户 | 分享生活点滴</text>
    </view>
  </view>
  
  <!-- 数据栏 -->
  <view class="stats-bar">
    <view class="stat-item">
      <text class="stat-number">{{stats.collect}}</text>
      <text class="stat-label">收藏</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{stats.comment}}</text>
      <text class="stat-label">评论</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{stats.like}}</text>
      <text class="stat-label">获赞</text>
    </view>
  </view>
  
  <!-- 功能菜单列表 -->
  <view class="menu-card">
    <view class="menu-item" bindtap="handleNav" data-path="/pages/my-favorites/index">
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleNav" data-path="/pages/my-comments/index">
      <text class="menu-text">我的评论</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleNav" data-path="">
      <text class="menu-text">我的设计</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleNav" data-path="">
      <text class="menu-text">联系客服</text>
      <text class="menu-arrow">></text>
    </view>
  </view>
</view>
