/* 全局样式 */
.container {
  background-color: #f6f6f6;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}

/* 顶部背景区 */
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
  border-radius: 0 0 24rpx 24rpx;
  z-index: 0;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 1;
  cursor: pointer;
}

/* 头像 */
.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  object-fit: cover;
  background-color: #f5f5f5;
  border: 4rpx solid #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-right: 30rpx;
}

/* 用户信息 */
.user-info {
  flex: 1;
}

/* 昵称 */
.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

/* 简介 */
.bio {
  font-size: 26rpx;
  color: #999999;
  display: block;
}

/* 数据栏 */
.stats-bar {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 1;
}

/* 数据项 */
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 数据数字 */
.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

/* 数据标签 */
.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 功能菜单列表 */
.menu-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 1;
}

/* 菜单列表项 */
.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #fafafa;
}

/* 菜单项文字 */
.menu-text {
  font-size: 30rpx;
  color: #333333;
}

/* 菜单项箭头 */
.menu-arrow {
  font-size: 28rpx;
  color: #cccccc;
  font-weight: 300;
}