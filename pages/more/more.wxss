/* 全局背景设为淡灰 */
page {
  background-color: #f6f6f6;
  height: 100%;
}
.page-bg {
  padding: 30rpx;
}

/* 头部卡片 */
.header-card {
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #eee;
}
.info-box {
  margin-left: 30rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.tips {
  font-size: 24rpx;
  color: #999;
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  padding: 30rpx 0;
  border-radius: 24rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.num {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.label {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 菜单卡片 */
.menu-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 0 30rpx;
}
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.menu-item:last-child {
  border-bottom: none;
}
.item-left {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}
.icon {
  margin-right: 20rpx;
  font-size: 34rpx;
}
.arrow {
  font-size: 30rpx;
  color: #ccc;
}
