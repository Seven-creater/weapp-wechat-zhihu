page {
  background-color: #f6f6f6;
  height: 100%;
}
.page-container {
  padding: 30rpx;
}

/* 头部 */
.header-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-right: 30rpx;
  background: #ddd;
}
.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.user-desc {
  font-size: 24rpx;
  color: #999;
}

/* 数据栏 */
.data-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.num {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 菜单卡片 */
.menu-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
}
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.menu-item:last-child {
  border-bottom: none;
}
.menu-text {
  font-size: 30rpx;
  color: #333;
}
.arrow {
  color: #ccc;
  font-size: 32rpx;
  font-family: monospace;
}
