/* 全局样式 */
.container {
  background-color: #F6F6F6;
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
}

/* 顶部用户信息区 */
.header {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #FFFFFF;
  box-sizing: border-box;
}

/* 头像 */
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  object-fit: cover;
  background-color: #F0F0F0;
  margin-right: 24rpx;
}

/* 用户信息 */
.user-info {
  flex: 1;
}

/* 昵称 */
.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

/* 简介 */
.bio {
  font-size: 26rpx;
  color: #999999;
  display: block;
}

/* 数据统计栏 */
.stats {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #F0F0F0;
}

/* 数据项 */
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 数据数字 */
.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4rpx;
}

/* 数据标签 */
.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 功能菜单卡片 */
.menu-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  margin: 30rpx;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 菜单列表项 */
.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  cursor: pointer;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #FAFAFA;
}

/* 菜单项文字 */
.menu-text {
  font-size: 32rpx;
  color: #333333;
}

/* 菜单项箭头 */
.menu-arrow {
  font-size: 28rpx;
  color: #CCCCCC;
  font-weight: 300;
}