/* components/user-name/index.wxss */
.user-name-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.user-name-wrapper.inline {
  display: inline-flex;
}

/* 垂直布局模式 */
.user-name-wrapper.vertical {
  flex-direction: column;
  align-items: flex-start;
  gap: 6rpx;
}

.user-nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.user-badge {
  display: inline-flex;
  align-items: center;
  gap: 4rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  border: 1rpx solid;
  font-size: 20rpx;
  line-height: 1;
}

.badge-icon {
  font-size: 20rpx;
  line-height: 1;
}

.badge-text {
  font-size: 20rpx;
  font-weight: 500;
  line-height: 1;
}

