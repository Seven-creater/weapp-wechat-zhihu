.tab-bar-item.special {
  position: relative;
  top: -20rpx;
}

.special-button {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #7fa99b 0%, #5a8a7a 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(127, 169, 155, 0.4);
  transition: all 0.3s ease;
}

.special-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(127, 169, 155, 0.3);
}

.special-icon {
  width: 56rpx;
  height: 56rpx;
}

