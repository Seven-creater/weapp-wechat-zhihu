.badge {
  position: absolute;
  top: -8rpx;
  right: -16rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ff4444;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  box-sizing: border-box;
  border: 2rpx solid #ffffff;
}

.badge-text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: bold;
  line-height: 1;
  transform: scale(0.9);
}

.tab-text {
  font-size: 20rpx;
  line-height: 1.2;
}

